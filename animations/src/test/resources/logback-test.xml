<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <appender name="C" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${testing.logging.consoleLayoutPattern}</pattern>
        </encoder>
    </appender>
    <logger name="com.chiralbehaviors.CoRE">
        <level value="INFO" />
    </logger>
    <logger name="com.mchange">
        <level value="WARN" />
    </logger>
    <logger name="org.hibernate">
        <level value="WARN" />
    </logger> 
    <logger name="org.hibernate.test">
        <level value="WARN" />
    </logger> 
    <logger name="org.hibernate.SQL">
        <level value="WARN" />
    </logger> 
    <logger name="org.hibernate.type">
        <level value="WARN" />
    </logger> 
    <root>
        <level value="WARN" />
        <appender-ref ref="C" />
    </root>

</configuration>
