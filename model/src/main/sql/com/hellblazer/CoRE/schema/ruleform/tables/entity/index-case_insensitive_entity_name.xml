<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1"
        author="hhildebrand">
        <sql> CREATE INDEX case_insensitive_entity_name_idx ON ruleform.entity USING btree
            (lower(name::text) COLLATE pg_catalog."default"); </sql>
        <rollback>
            <dropIndex tableName="ruleform.entity" indexName="case_insensitive_entity_name_idx"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
