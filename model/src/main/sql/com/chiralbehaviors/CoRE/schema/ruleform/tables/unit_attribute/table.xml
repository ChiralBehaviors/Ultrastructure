<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-61">
        <createTable schemaName="ruleform" tableName="unit_attribute">
            <column name="id" type="CHAR(22)">
                <constraints primaryKey="true" primaryKeyName="unit_attribute_pkey" />
            </column>
            <column name="unit_rf" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column name="attribute" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column name="key" type="VARCHAR(10485760)" />
            <column name="numeric_value" type="numeric" />
            <column name="integer_value" type="INT4" />
            <column name="boolean_value" type="SMALLINT" />
            <column name="text_value" type="VARCHAR(10485760)" />
            <column name="timestamp_value" type="TIMESTAMP WITH TIME ZONE" />
            <column name="binary_value" type="BYTEA" />
            <column name="unit" type="CHAR(22)" />
            <column defaultValueComputed="1" name="sequence_number" type="sequence_number">
                <constraints nullable="false" />
            </column>
            <column name="notes" type="VARCHAR(10485760)" />
            <column name="updated_by" defaultValue="AAAAAAAAAAAAAAAAAAAAAQ" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" type="TIMESTAMPTZ">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="unit_attribute" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-358">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="unit" baseTableName="unit_attribute" constraintName="unit_attribute_unit_fkey" deferrable="true"
            initiallyDeferred="false" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="unit" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-359">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="unit_rf" baseTableName="unit_attribute" constraintName="unit_attribute_unit_rf_fkey" deferrable="true"
            initiallyDeferred="false" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="unit" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-352">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="attribute" baseTableName="unit_attribute" constraintName="unit_attribute_attribute_fkey" deferrable="true"
            initiallyDeferred="false" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-360">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="unit_attribute" constraintName="unit_attribute_updated_by_fkey" deferrable="true"
            initiallyDeferred="false" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-419">
        <addUniqueConstraint schemaName="ruleform" columnNames="unit, attribute" constraintName="unit_attribute_unit_key"
            deferrable="false" disabled="false" initiallyDeferred="false" tableName="unit_attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-525">
        <createIndex schemaName="ruleform" indexName="unit_attribute_updated_by_fkey_idx" tableName="unit_attribute" unique="false">
            <column name="updated_by"  />
        </createIndex>
    </changeSet>

    <changeSet id="2" author="hhildebrand">
        <sql> ALTER TABLE unit_attribute OWNER TO core; </sql>
        <rollback />
    </changeSet>
    <changeSet id="4" author="hhildebrand">
        <sql><![CDATA[
            GRANT ALL ON TABLE unit_attribute TO core;
            GRANT SELECT ON TABLE unit_attribute TO core_read_only;
            GRANT SELECT, UPDATE, INSERT, DELETE ON TABLE unit_attribute TO core_read_write;
            ]]>
        </sql>
        <rollback />
    </changeSet>
</databaseChangeLog>
