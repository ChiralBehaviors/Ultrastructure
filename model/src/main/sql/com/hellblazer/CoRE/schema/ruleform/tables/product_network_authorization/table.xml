            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-257">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.product_network_authorization"
            constraintName="product_network_authorization_updated_by_fkey" deferrable="false" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-394">
        <addUniqueConstraint columnNames="classification, classifier, authorized_parent, authorized_relationship, sequence_number"
            constraintName="product_attribute_authorizatio_agency_classification_attri_key" deferrable="false" disabled="false"
            initiallyDeferred="false" tableName="ruleform.product_network_authorization" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-502">
