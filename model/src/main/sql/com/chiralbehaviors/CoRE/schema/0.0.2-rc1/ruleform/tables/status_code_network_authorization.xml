<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="0.0.2">
        <createTable schemaName="ruleform" remarks="Defines rules stating what network status_codes are authorized for particular status_codes"
            tableName="status_code_network_authorization"
        >
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="status_code_network_authorization_pkey" />
            </column>
            <column name="classification" type="uuid" />
            <column name="classifier" type="uuid" />
            <column name="authorized_parent" remarks="A network parent a status_code is expected to have" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="authorized_relationship" remarks="A network relationship a status_code is expected to have" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="cardinality" type="SMALLINT" />
            <column name="child_relationship" remarks="the relationship between the classified child and its child" type="uuid" />
            <column defaultValueComputed="1" name="sequence_number"
                remarks="Ordering and uniqueness, for when an status_code can have multiple acceptable values" type="sequence_number"
            >
                <constraints nullable="false" />
            </column>
            <column name="grouping_agency" remarks="the authoratative agency" type="uuid" />
            <column name="notes" remarks="Additional notes regarding this rule" type="TEXT" />
            <column name="updated_by" remarks="The status_code that last updated this rule" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
        </createTable>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="child_relationship" baseTableName="status_code_network_authorization" constraintName="status_code_network_authorization_child_relationship_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="relationship" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="authorized_parent" baseTableName="status_code_network_authorization" constraintName="status_code_network_authorization_authorized_parent_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="status_code" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="authorized_relationship" baseTableName="status_code_network_authorization" constraintName="status_code_network_authorization_authorized_relationship_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="relationship" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="classification" baseTableName="status_code_network_authorization" constraintName="status_code_network_authorization_classification_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="status_code" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="classifier" baseTableName="status_code_network_authorization" constraintName="status_code_network_authorization_classifier_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="status_code" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="grouping_agency" baseTableName="status_code_network_authorization" constraintName="status_code_network_authorization_grouping_agency_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="agency" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="status_code_network_authorization" constraintName="status_code_network_authorization_updated_by_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="agency" />
        <addUniqueConstraint schemaName="ruleform"
            columnNames="classification, classifier, authorized_parent, authorized_relationship, child_relationship, sequence_number" constraintName="status_code_status_code_authorizatio_status_code_classification_attri_key"
            deferrable="false" disabled="false" initiallyDeferred="true" tableName="status_code_network_authorization" />
        <createIndex schemaName="ruleform" indexName="status_code_network_authorization_updated_by_fkey_idx" tableName="status_code_network_authorization"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
        <rollback>
            <dropTable tableName="status_code_network_authorization" />
        </rollback>
    </changeSet>
</databaseChangeLog>
