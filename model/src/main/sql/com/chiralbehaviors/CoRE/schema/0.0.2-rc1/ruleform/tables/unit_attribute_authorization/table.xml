<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-62">
        <createTable schemaName="ruleform" remarks="Defines rules stating what attributes (and values thereof) are authorized for particular units"
            tableName="unit_attribute_authorization"
        >
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="unit_attribute_authorization_pkey" />
            </column>
            <column name="classification"
                remarks="In conjunction with the 'unit' column, determines the classification criteria for selecting attributes a certain unit must have"
                type="uuid"
            >
                <constraints nullable="false" />
            </column>
            <column name="classifier"
                remarks="In conjunction with the 'classification' column, determines the classification criteria for selecting attributes a certain unit must have"
                type="uuid"
            >
                <constraints nullable="false" />
            </column>
            <column name="authorized_attribute" remarks="An Attribute a unit is expected to have" type="uuid">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="1" name="sequence_number"
                remarks="Ordering and uniqueness, for when an Attribute can have multiple acceptable values" type="sequence_number"
            >
                <constraints nullable="false" />
            </column>
            <column name="boolean_value" type="SMALLINT" />
            <column name="binary_value" type="BYTEA" />
            <column name="text_value" remarks="Contains a single acceptable text-value if 'attribute' has a data type of 'text'"
                type="TEXT" />
            <column name="integer_value" type="INT4" />
            <column name="numeric_value" type="numeric" />
            <column name="timestamp_value" type="TIMESTAMPTZ" />
            <column name="grouping_agency" type="uuid" />
            <column name="notes" remarks="Additional notes regarding this rule" type="TEXT" />
            <column name="updated_by" defaultValue="'00000000-0000-0000-0000-000000000001'" remarks="The unit that last updated this rule" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
        </createTable>
        <rollback>
            <dropTable tableName="unit_attribute_authorization" />
        </rollback>
    </changeSet>
    <changeSet id="20" author="hhildebrand">
        <sql> ALTER TABLE unit_attribute_authorization OWNER TO core; </sql>
        <rollback />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-353">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="authorized_attribute" baseTableName="unit_attribute_authorization" constraintName="unit_attribute_authorization_attribute_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-354">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="classification" baseTableName="unit_attribute_authorization" constraintName="unit_attribute_authorization_classification_attribute_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="relationship" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-355">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="classifier" baseTableName="unit_attribute_authorization" constraintName="unit_attribute_authorization_classifier_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="unit" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-356">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="grouping_agency" baseTableName="unit_attribute_authorization" constraintName="unit_attribute_authorization_grouping_unit_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-357">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="unit_attribute_authorization" constraintName="unit_attribute_authorization_updated_by_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-418">
        <addUniqueConstraint schemaName="ruleform" columnNames="classification, classifier, authorized_attribute, sequence_number"
            constraintName="unit_attribute_authorizat_classification_attribute_clas_key" deferrable="false" disabled="false"
            initiallyDeferred="true" tableName="unit_attribute_authorization" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-524">
        <createIndex schemaName="ruleform" indexName="unit_attribute_authorization_updated_by_fkey_idx" tableName="unit_attribute_authorization"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
    </changeSet>

    <changeSet id="30" author="hhildebrand">
        <sql><![CDATA[
            GRANT ALL ON TABLE unit_attribute_authorization TO core;
            GRANT SELECT ON TABLE unit_attribute_authorization TO core_read_only;
            GRANT SELECT, UPDATE, INSERT, DELETE ON TABLE unit_attribute_authorization TO core_read_write;
            ]]>
