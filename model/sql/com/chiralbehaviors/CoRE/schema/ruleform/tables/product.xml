<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform" tableName="product">
            <column name="defining_product" type="uuid" />
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="product_pkey" />
            </column>
            <column name="name" type="TEXT">
                <constraints nullable="false" />
            </column>
            <column name="description" type="TEXT" />
            <column name="notes" type="TEXT" />
            <column name="updated_by" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
        </createTable>
        <rollback>
            <dropTable tableName="product" />
        </rollback>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="product" constraintName="product_updated_by_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
        <createIndex schemaName="ruleform" indexName="case_insensitive_product_name_idx" tableName="product" unique="false">
            <column name="lower((name)::text)" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="product_updated_by_fkey_idx" tableName="product" unique="false">
            <column name="updated_by" />
        </createIndex>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="defining_product" baseTableName="product" constraintName="product_defining_product_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="product" />
            
        <comment>This contraint needs to be here, instead of agency to deal with circularity constraints</comment>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="defining_product" baseTableName="agency" constraintName="agency_defining_product_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="product" />
    </changeSet>
</databaseChangeLog>
