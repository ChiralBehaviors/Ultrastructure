<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-8">
        <createTable remarks="Defines rules stating what attributes (and values thereof) are authorized for particular Entities"
            tableName="ruleform.attr_meta_attr_auth"
        >
            <column autoIncrement="true" name="id" remarks="Unique identifier" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="attr_meta_attr_auth_pkey" />
            </column>
            <column name="classification"
                remarks="In conjunction with the 'classifier' column, determines the classification criteria for selecting meta attributes a certain Attribute must have"
                type="INT8"
            >
                <constraints nullable="false" />
            </column>
            <column name="classifier"
                remarks="In conjunction with the 'classification' column, determines the classification criteria for selecting metaattributes a certain Attribute must have"
                type="INT8"
            >
                <constraints nullable="false" />
            </column>
            <column name="authorized_attribute" remarks="A meta Attribute an Attribute is expected to have" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="1" name="sequence_number"
                remarks="Ordering and uniqueness, for when a meta Attribute can have multiple acceptable values" type="ruleform.sequence_number"
            >
                <constraints nullable="false" />
            </column>
            <column name="grouping_agency" remarks="If present, used to select an entire grouping of Attributes that can be acceptable values"
                type="INT8" />
            <column name="text_value" remarks="Contains a single acceptable text-value if 'attribute' has a data type of 'text'"
                type="VARCHAR(10485760)" />
            <column name="integer_value" remarks="Contains a single acceptable integer-value if 'attribute' has a data type of 'integer'"
                type="INT4" />
            <column name="numeric_value" remarks="Contains a single acceptable numeric-value if 'attribute' has a data type of 'numeric'"
                type="numeric" />
            <column name="timestamp_value" type="TIMESTAMPTZ" />
            <column name="notes" remarks="Additional notes regarding this rule" type="VARCHAR(10485760)" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" remarks="The date this rule was last changed"
                type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.attr_meta_attr_auth" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-111">
        <addForeignKeyConstraint baseColumnNames="authorized_attribute" baseTableName="ruleform.attr_meta_attr_auth"
            constraintName="attr_meta_attr_auth_authorized_attribute_fkey" deferrable="false" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-112">
        <addForeignKeyConstraint baseColumnNames="classification" baseTableName="ruleform.attr_meta_attr_auth"
            constraintName="attr_meta_attr_auth_classification_fkey" deferrable="false" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.relationship" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-113">
        <addForeignKeyConstraint baseColumnNames="classifier" baseTableName="ruleform.attr_meta_attr_auth"
            constraintName="attr_meta_attr_auth_classifier_fkey" deferrable="false" initiallyDeferred="false" onDelete="RESTRICT" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-114">
        <addForeignKeyConstraint baseColumnNames="grouping_agency" baseTableName="ruleform.attr_meta_attr_auth"
            constraintName="attr_meta_attr_auth_grouping_agency_fkey" deferrable="false" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-115">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.attr_meta_attr_auth"
            constraintName="attr_meta_attr_auth_updated_by_fkey" deferrable="false" initiallyDeferred="false" onDelete="RESTRICT" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-374">
        <addUniqueConstraint columnNames="grouping_agency, classification, classifier, authorized_attribute, sequence_number"
            constraintName="attr_meta_attr_auth_classification_attri_key" deferrable="false" disabled="false" initiallyDeferred="false"
            tableName="ruleform.attr_meta_attr_auth" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-437">
        <createIndex indexName="attr_meta_attr_auth_updated_by_fkey_idx" tableName="ruleform.attr_meta_attr_auth" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
