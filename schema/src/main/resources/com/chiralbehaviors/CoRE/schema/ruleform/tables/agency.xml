<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform"
            remarks="A agency is an actor in the system.  It has the ability to do work, produce and consume products" tableName="agency"
        >
            <column name="workspace" type="uuid" />
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="agency_pkey" />
            </column>
            <column name="name" type="TEXT">
                <constraints nullable="false" />
            </column>
            <column name="description" type="TEXT" />
            <column name="notes" type="TEXT" />
            <column name="updated_by" defaultValue= "'00000000-0000-0000-0000-000000000003'" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
        </createTable>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="agency" constraintName="agency_updated_by_fkey" deferrable="true" initiallyDeferred="true"
            onDelete="SET DEFAULT"  referencedColumnNames="id" referencedTableName="agency" />
        <createIndex schemaName="ruleform" indexName="agency_updated_by_fkey_idx" tableName="agency" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>

</databaseChangeLog>
