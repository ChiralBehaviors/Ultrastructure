<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2.0.0" author="hhildebrand">
        <createView schemaName="readable" viewName="product"><![CDATA[
			 SELECT b.id, b.name, b.description, b.notes, up.name AS updated_by, b.version
			   FROM product b
			   JOIN agency up ON b.updated_by = up.id;
			
			ALTER TABLE readable.product
			  OWNER TO core;
            ]]>
        </createView>
        <rollback>
            <dropView viewName="readable.product" />
        </rollback>
    </changeSet>
</databaseChangeLog>
