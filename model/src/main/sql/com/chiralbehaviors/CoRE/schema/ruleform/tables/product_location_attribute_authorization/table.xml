<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-38">
        <createTable remarks="Defines rules stating what attributes (and values thereof) are authorized for particular ProductLocation Locations"
            tableName="ruleform.product_location_attribute_authorization"
        >
            <column autoIncrement="true" name="id" remarks="Unique identifier" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="product_location_attribute_authorization_pkey" />
            </column>
            <column name="classification"
                remarks="In conjunction with the 'classifier' column, determines the classification criteria for selecting attributes a certain ProductLocation must have"
                type="INT8"
            >
                <constraints nullable="false" />
            </column>
            <column name="classifier"
                remarks="In conjunction with the 'classification' column, determines the classification criteria for selecting attributes a certain ProductLocation must have"
                type="INT8"
            >
                <constraints nullable="false" />
            </column>
            <column name="authorized_attribute" remarks="An Attribute a ProductLocation is expected to have" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="1" name="sequence_number"
                remarks="Ordering and uniqueness, for when an Attribute can have multiple acceptable values" type="ruleform.sequence_number"
            >
                <constraints nullable="false" />
            </column>
            <column name="grouping_agency"
                remarks="If present, along with 'product_location_attribute' and 'product_value', used to select an entire grouping of Entities that can be acceptable values"
                type="INT8" />
            <column name="text_value" remarks="Contains a single acceptable text-value if 'attribute' has a data type of 'text'"
                type="VARCHAR(10485760)" />
            <column name="integer_value" remarks="Contains a single acceptable integer-value if 'attribute' has a data type of 'integer'"
                type="INT4" />
            <column name="numeric_value" remarks="Contains a single acceptable numeric-value if 'attribute' has a data type of 'numeric'"
                type="numeric" />
            <column name="timestamp_value" type="TIMESTAMPTZ" />
            <column name="notes" remarks="Additional notes regarding this rule" type="VARCHAR(10485760)" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" remarks="The date this rule was last changed"
                type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.product_location_attribute_authorization" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-229">
        <addForeignKeyConstraint baseColumnNames="authorized_attribute" baseTableName="ruleform.product_location_attribute_authorization"
            constraintName="product_location_attribute_authorization_authorized_attribute_f" deferrable="false" initiallyDeferred="false"
            onDelete="RESTRICT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-230">
        <addForeignKeyConstraint baseColumnNames="classification" baseTableName="ruleform.product_location_attribute_authorization"
            constraintName="product_location_attribute_authorization_classification_fkey" deferrable="false" initiallyDeferred="false"
            onDelete="RESTRICT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.relationship" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-231">
        <addForeignKeyConstraint baseColumnNames="classifier" baseTableName="ruleform.product_location_attribute_authorization"
            constraintName="product_location_attribute_authorization_classifier_fkey" deferrable="false" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.product" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-232">
        <addForeignKeyConstraint baseColumnNames="grouping_agency" baseTableName="ruleform.product_location_attribute_authorization"
            constraintName="product_location_attribute_authorization_grouping_agency_fkey" deferrable="false" initiallyDeferred="false"
            onDelete="RESTRICT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-233">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.product_location_attribute_authorization"
            constraintName="product_location_attribute_authorization_updated_by_fkey" deferrable="false" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-399">
        <addUniqueConstraint columnNames="grouping_agency, classification, classifier, authorized_attribute, sequence_number"
            constraintName="product_location_attribute_auth_classification_attri_key" deferrable="false" disabled="false" initiallyDeferred="false"
            tableName="ruleform.product_location_attribute_authorization" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-487">
        <createIndex indexName="product_location_attribute_authorization_updated_by_fkey_idx" tableName="ruleform.product_location_attribute_authorization"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
