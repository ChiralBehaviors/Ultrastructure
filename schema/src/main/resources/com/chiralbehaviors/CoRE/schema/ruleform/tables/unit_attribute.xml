<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform" tableName="unit_attribute">
            <column name="workspace" type="uuid" />
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="unit_attribute_pkey" />
            </column>
            <column name="unit_rf" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="attribute" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="key" type="TEXT" />
            <column name="numeric_value" type="numeric" />
            <column name="integer_value" type="INT4" />
            <column name="boolean_value" type="boolean" />
            <column name="text_value" type="TEXT" />
            <column name="timestamp_value" type="TIMESTAMP WITH TIME ZONE" />
            <column name="binary_value" type="BYTEA" />
            <column name="unit" type="uuid" />
            <column defaultValueComputed="1" name="sequence_number" type="INT4">
                <constraints nullable="false" />
            </column>
            <column name="notes" type="TEXT" />
            <column name="updated_by" defaultValue= "'00000000-0000-0000-0000-000000000003'" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
            <column name="updated" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false" />
            </column>
            <column name="json_value" type="jsonb"/>
        </createTable>
        <rollback>
            <dropTable tableName="unit_attribute" />
        </rollback>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="unit" baseTableName="unit_attribute" constraintName="unit_attribute_unit_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="unit" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="unit_rf" baseTableName="unit_attribute" constraintName="unit_attribute_unit_rf_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="unit" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="attribute" baseTableName="unit_attribute" constraintName="unit_attribute_attribute_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="unit_attribute" constraintName="unit_attribute_updated_by_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="SET DEFAULT" referencedColumnNames="id" referencedTableName="agency" />
        <addUniqueConstraint schemaName="ruleform" columnNames="unit, attribute" constraintName="unit_attribute_unit_key"
            deferrable="false" disabled="false" initiallyDeferred="true" tableName="unit_attribute" />
        <createIndex schemaName="ruleform" indexName="unit_attribute_updated_by_fkey_idx" tableName="unit_attribute" unique="false">
            <column name="updated_by" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="unit_attribute_key_idx" tableName="unit_attribute" unique="false">
            <column name="key" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="unit_attribute_numeric_idx" tableName="unit_attribute" unique="false">
            <column name="numeric_value" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="unit_attribute_timestamp_idx" tableName="unit_attribute" unique="false">
            <column name="timestamp_value" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="unit_attribute_attribute_idx" tableName="unit_attribute" unique="false">
            <column name="attribute" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="unit_attribute_unit_idx" tableName="unit_attribute" unique="false">
            <column name="unit" />
        </createIndex>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="workspace" baseTableName="unit_attribute" constraintName="unit_attribute_workspace_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="workspace_authorization" />
    </changeSet>
</databaseChangeLog>
