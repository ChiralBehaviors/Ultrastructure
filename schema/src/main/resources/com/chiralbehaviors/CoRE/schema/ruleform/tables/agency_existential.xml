<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform" tableName="agency_existential">
            <column name="workspace" type="uuid" />
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="agency_existential_pkey" />
            </column>
            <column name="name" type="TEXT" />
            <column name="authority" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="entity" type="uuid" />
            <column name="updated_by" defaultValue="'00000000-0000-0000-0000-000000000003'" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
            <column name="notes" type="TEXT" />
        </createTable>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="authority" baseTableName="agency_existential" constraintName="agency_existential_authority_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="existential" />

        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="entity" baseTableName="agency_existential" constraintName="agency_entity_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="existential" />
        <addUniqueConstraint schemaName="ruleform" columnNames="entity, authority" constraintName="agency_existential_key_agency"
            deferrable="false" disabled="false" initiallyDeferred="true" tableName="agency_existential" />

        <createIndex schemaName="ruleform" indexName="agency_existential_updated_by_fkey_idx" tableName="agency_existential"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="agency_existential_entity_fkey_idx" tableName="agency_existential" unique="false">
            <column name="entity" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="agency_existential_authority_fkey_idx" tableName="agency_existential"
            unique="false"
        >
            <column name="authority" />
        </createIndex>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="workspace" baseTableName="agency_existential" constraintName="agency_existential_workspace_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="workspace_authorization" />
    </changeSet>
</databaseChangeLog>
