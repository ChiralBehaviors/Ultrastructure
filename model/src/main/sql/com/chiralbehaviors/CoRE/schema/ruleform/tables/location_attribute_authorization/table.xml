<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-26">
        <createTable schemaName="ruleform"
            remarks="Defines rules stating what attributes (and values thereof) are authorized for particular Locations" tableName="location_attribute_authorization"
        >
            <column name="id" type="CHAR(22)">
                <constraints primaryKey="true" primaryKeyName="location_attribute_authorization_pkey" />
            </column>
            <column name="classification"
                remarks="In conjunction with the 'classifier' column, determines the classification criteria for selecting attributes a certain Location must have"
                type="CHAR(22)"
            >
                <constraints nullable="false" />
            </column>
            <column name="classifier"
                remarks="In conjunction with the 'classification' column, determines the classification criteria for selecting attributes a certain Location must have"
                type="CHAR(22)"
            >
                <constraints nullable="false" />
            </column>
            <column name="authorized_attribute" remarks="An Attribute a Location is expected to have" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="1" name="sequence_number"
                remarks="Ordering and uniqueness, for when an Attribute can have multiple acceptable values" type="sequence_number"
            >
                <constraints nullable="false" />
            </column>
            <column name="grouping_agency"
                remarks="If present, along with 'location_attribute' and 'location_value', used to select an entire grouping of Locations that can be acceptable values"
                type="CHAR(22)" />
            <column name="boolean_value" type="SMALLINT" />
            <column name="binary_value" type="BYTEA" />
            <column name="text_value" remarks="Contains a single acceptable text-value if 'attribute' has a data type of 'text'"
                type="VARCHAR(10485760)" />
            <column name="integer_value" remarks="Contains a single acceptable integer-value if 'attribute' has a data type of 'integer'"
                type="INT4" />
            <column name="numeric_value" remarks="Contains a single acceptable numeric-value if 'attribute' has a data type of 'numeric'"
                type="numeric" />
            <column name="timestamp_value" type="TIMESTAMPTZ" />
            <column name="notes" remarks="Additional notes regarding this rule" type="VARCHAR(10485760)" />
            <column name="updated_by" defaultValue="AAAAAAAAAAAAAAAAAAAAAQ" remarks="The agency that last updated this rule" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" remarks="The date this rule was last changed"
                type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="location_attribute_authorization" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-178">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="authorized_attribute" baseTableName="location_attribute_authorization" constraintName="location_attribute_authorization_authorized_attribute_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-179">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="classification" baseTableName="location_attribute_authorization" constraintName="location_attribute_authorization_classification_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="relationship" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-180">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="classifier" baseTableName="location_attribute_authorization" constraintName="location_attribute_authorization_classifier_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="location" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-181">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="grouping_agency" baseTableName="location_attribute_authorization" constraintName="location_attribute_authorization_grouping_agency_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-182">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="location_attribute_authorization" constraintName="location_attribute_authorization_updated_by_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-387">
        <addUniqueConstraint schemaName="ruleform" columnNames="classification, classifier, authorized_attribute, sequence_number"
            constraintName="location_attribute_authorizatio_agency_classification_attri_key" deferrable="false" disabled="false"
            initiallyDeferred="true" tableName="location_attribute_authorization" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-467">
        <createIndex schemaName="ruleform" indexName="location_attribute_authorization_updated_by_fkey_idx" tableName="location_attribute_authorization"
            unique="false"
        >
            <column name="updated_by"   />
        </createIndex>
    </changeSet>
</databaseChangeLog>
