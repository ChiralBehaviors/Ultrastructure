<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet id="2.0.0" author="hhildebrand">
        <createView viewName="attribute" schemaName="readable" replaceIfExists="true"><![CDATA[
			 SELECT a.id, 
			     a.name, 
			     a.description, 
			     a.notes, 
			     a.inheritable, 
			     a.value_type, 
			     up.name AS updated_by, 
			     a.version
			   FROM attribute a
			   JOIN agency up ON a.updated_by = up.id;
            ]]>
        </createView>
        <rollback>
            <dropView viewName="readable.attribute" />
        </rollback>
    </changeSet>
</databaseChangeLog>
