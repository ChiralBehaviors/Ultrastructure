>

    <changeSet author="hhildebrand" id="1390879803225-8">
        <createTable schemaName="ruleform"
            remarks="Defines rules stating what attributes (and values thereof) are authorized for particular Entities" tableName="attr_meta_attr_auth"
        >
            <column name="id" type="CHAR(22)">
                <constraints primaryKey="true" primaryKeyName="attr_meta_attr_auth_pkey" />
            </column>
            <column name="classification"
                remarks="In conjunction with the 'classifier' column, determines the classification criteria for selecting meta attributes a certain Attribute must have"
                type="CHAR(22)"
            >
                <constraints nullable="false" />
            </column>
            <column name="classifier"
                remarks="In conjunction with the 'classification' column, determines the classification criteria for selecting metaattributes a certain Attribute must have"
                type="CHAR(22)"
            >
                <constraints nullable="false" />
            </column>
            <column name="authorized_attribute" remarks="A meta Attribute an Attribute is expected to have" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="1" name="sequence_number"
                remarks="Ordering and uniqueness, for when a meta Attribute can have multiple acceptable values" type="sequence_number"
            >
                <constraints nullable="false" />
            </column>
            <column name="grouping_agency" remarks="If present, used to select an entire grouping of Attributes that can be acceptable values"
                type="CHAR(22)" />
            <column name="boolean_value" type="SMALLINT" />
            <column name="binary_value" type="BYTEA" />
            <column name="text_value" remarks="Contains a single acceptable text-value if 'attribute' has a data type of 'text'"
                type="VARCHAR(10485760)" />
            <column name="integer_value" remarks="Contains a single acceptable integer-value if 'attribute' has a data type of 'integer'"
                type="INT4" />
            <column name="numeric_value" remarks="Contains a single acceptable numeric-value if 'attribute' has a data type of 'numeric'"
                type="numeric" />
            <column name="timestamp_value" type="TIMESTAMPTZ" />
            <column name="notes" remarks="Additional notes regarding this rule" type="VARCHAR(10485760)" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" remarks="The date this rule was last changed"
                type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="attr_meta_attr_auth" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-111">
