<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform" remarks="Defines rules stating what network relationships are authorized for particular Locations"
            tableName="location_network_authorization"
        >
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="location_network_authorization_pkey" />
            </column>
            <column name="name" type="text"/>
            <column name="classifier" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="classification" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="authorized_parent" type="uuid" />
            <column name="authorized_relationship" type="uuid" />
            <column name="cardinality" type="SMALLINT" />
            <column name="child_relationship" remarks="the relationship between the classified child and its child" type="uuid" />
            <column name="grouping_agency" remarks="A network parent an Location is expected to have" type="uuid" />
            <column name="notes" remarks="Additional notes regarding this rule" type="TEXT" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
        </createTable>
        <rollback>
            <dropTable tableName="location_network_authorization" />
        </rollback>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="child_relationship" baseTableName="location_network_authorization" constraintName="location_network_authorization_child_relationship_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="relationship" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="authorized_parent" baseTableName="location_network_authorization" constraintName="location_network_authorization_authorized_parent_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="location" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="authorized_relationship" baseTableName="location_network_authorization" constraintName="location_network_authorization_authorized_relationship_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="relationship" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="classifier" baseTableName="location_network_authorization" constraintName="location_network_authorization_classifier_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="relationship" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="classification" baseTableName="location_network_authorization" constraintName="location_network_authorization_classification_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="location" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="grouping_agency" baseTableName="location_network_authorization" constraintName="location_network_authorization_grouping_agency_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="agency" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="location_network_authorization" constraintName="location_network_authorization_updated_by_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="agency" />
        <addUniqueConstraint schemaName="ruleform"
            columnNames="classifier, classification, authorized_parent, authorized_relationship, child_relationship, grouping_agency"
            constraintName="location_attribute_auth_agency_classification_key" deferrable="false" disabled="false" initiallyDeferred="true"
            tableName="location_network_authorization" />
        <createIndex schemaName="ruleform" indexName="location_network_authorization_updated_by_fkey_idx" tableName="location_network_authorization"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
