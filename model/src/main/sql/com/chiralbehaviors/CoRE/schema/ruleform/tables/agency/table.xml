<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>
    <changeSet author="hhildebrand" id="1390879803225-2">
        <createTable remarks="A agency is an actor in the system.  It has the ability to do work, produce and consume products"
            tableName="agency" schemaName="ruleform"
        >
            <column name="id" type="CHAR(22)">
                <constraints primaryKey="true" primaryKeyName="agency_pkey" />
            </column>
            <column name="name" type="VARCHAR(10485760)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="VARCHAR(10485760)" />
            <column name="notes" type="VARCHAR(10485760)" />
            <column name="updated_by" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" type="TIMESTAMPTZ">
                <constraints nullable="false" />
            </column>
            <column defaultValueNumeric="0" name="pinned" type="SMALLINT">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable schemaName="ruleform" tableName="agency" />
        </rollback>
    </changeSet>

    <changeSet author="hhildebrand" id="1390879803225-110">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableSchemaName="ruleform " baseTableName="agency"
            constraintName="agency_updated_by_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableSchemaName="ruleform" referencedTableName="agency" />
    </changeSet>

    <changeSet author="hhildebrand" id="1390879803225-436">
        <createIndex indexName="agency_updated_by_fkey_idx" schemaName="ruleform" tableName="agency" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>

</databaseChangeLog>
