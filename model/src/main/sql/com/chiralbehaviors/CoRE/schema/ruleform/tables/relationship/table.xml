<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-48">
        <createTable schemaName="ruleform" tableName="relationship">
            <column name="id" type="CHAR(22)">
                <constraints primaryKey="true" primaryKeyName="relationship_pkey" />
            </column>
            <column name="name" type="VARCHAR(10485760)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="VARCHAR(10485760)" />
            <column name="preferred" type="SMALLINT">
                <constraints nullable="false" />
            </column>
            <column name="inverse" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column name="notes" type="VARCHAR(10485760)" />
            <column name="updated_by" defaultValue="AAAAAAAAAAAAAAAAAAAAAQ" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" type="TIMESTAMPTZ">
                <constraints nullable="false" />
            </column>
            <column defaultValueNumeric="0" name="pinned" type="SMALLINT">
                <constraints nullable="false" />
            </column>
            <column name="operator" type="relational_operator" />
        </createTable>
        <rollback>
            <dropTable tableName="relationship" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-316">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="relationship" constraintName="relationship_updated_by_fkey" deferrable="true"
            initiallyDeferred="false" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-409">
        <addUniqueConstraint schemaName="ruleform" columnNames="name" constraintName="relationship_name" deferrable="false"
            disabled="false" initiallyDeferred="false" tableName="relationship" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-515">
        <createIndex schemaName="ruleform" indexName="relationship_inverse_fkey_idx" tableName="relationship" unique="false">
            <column name="inverse" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-516">
        <createIndex schemaName="ruleform" indexName="relationship_updated_by_fkey_idx" tableName="relationship" unique="false">
            <column name="updated_by"   />
        </createIndex>
    </changeSet>
</databaseChangeLog>
