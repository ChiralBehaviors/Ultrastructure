<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform"
            remarks="Defines rules stating what attributes (and values thereof) are authorized for particular relationships" tableName="relationship_attribute_authorization"
        >
            <column name="defining_product" type="uuid" />
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="relationship_attribute_authorization_pkey" />
            </column>
            <column name="network_authorization" remarks="The network relationship that authorizes the attributes" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="authorized_attribute" remarks="An Attribute the existential entity is expected to have" type="uuid">
                <constraints nullable="true" />
            </column>
            <column name="authorized_network_attribute" remarks="An Attribute the child network edge is expected to have" type="uuid">
                <constraints nullable="true" />
            </column>
            <column name="boolean_value" type="boolean" />
            <column name="binary_value" type="BYTEA" />
            <column name="text_value" remarks="Contains a single acceptable text-value if 'attribute' has a data type of 'text'"
                type="TEXT" />
            <column name="integer_value" type="INT4" />
            <column name="numeric_value" type="numeric" />
            <column name="timestamp_value" type="TIMESTAMPTZ" />
            <column name="grouping_agency" type="uuid" />
            <column name="notes" remarks="Additional notes regarding this rule" type="TEXT" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
        </createTable>
        <rollback>
            <dropTable tableName="relationship_attribute_authorization" />
        </rollback>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="authorized_attribute" baseTableName="relationship_attribute_authorization" constraintName="relationship_attribute_authorization_attribute_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="authorized_network_attribute" baseTableName="relationship_attribute_authorization" constraintName="relationship_attribute_authorization_network_attribute_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="network_authorization" baseTableName="relationship_attribute_authorization" constraintName="relationship_attribute_network_authorization_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="relationship_network_authorization" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="grouping_agency" baseTableName="relationship_attribute_authorization" constraintName="relationship_attribute_authorization_grouping_agency_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="relationship_attribute_authorization" constraintName="relationship_attribute_authorization_updated_by_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="agency" />
        <addUniqueConstraint schemaName="ruleform"
            columnNames="network_authorization, authorized_attribute, authorized_network_attribute, grouping_agency" constraintName="relationship_attribute_authorizat_classification_attribute_clas"
            deferrable="false" disabled="false" initiallyDeferred="true" tableName="relationship_attribute_authorization" />
        <createIndex schemaName="ruleform" indexName="relationship_attribute_authorization_updated_by_fkey_idx" tableName="relationship_attribute_authorization"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="relationship_attribute_authorization_network_authorization_fkey_idx"
            tableName="relationship_attribute_authorization" unique="false"
        >
            <column name="network_authorization" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="relationship_attribute_authorization_authorized_attribute_fkey_idx"
            tableName="relationship_attribute_authorization" unique="false"
        >
            <column name="authorized_attribute" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="relationship_attribute_authorization_authorized_network_attribute_fkey_idx"
            tableName="relationship_attribute_authorization" unique="false"
        >
            <column name="authorized_network_attribute" />
        </createIndex>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="defining_product" baseTableName="relationship_attribute_authorization" constraintName="relationship_attribute_authorization_defining_product_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="product" />
        <sql> ALTER TABLE relationship_attribute_authorization OWNER TO core; </sql>
        <rollback />
        <sql><![CDATA[
            GRANT ALL ON TABLE relationship_attribute_authorization TO core;
            GRANT SELECT ON TABLE relationship_attribute_authorization TO core_read_only;
            GRANT SELECT, UPDATE, INSERT, DELETE ON TABLE relationship_attribute_authorization TO core_read_write;
            ]]>
        </sql>
        <rollback />
    </changeSet>
</databaseChangeLog>
