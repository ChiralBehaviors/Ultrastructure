<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-63">
        <createTable tableName="ruleform.unit_network">
            <column autoIncrement="true" name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="unit_network_pkey" />
            </column>
            <column name="parent" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="relationship" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="child" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueNumeric="0" name="inferred" type="SMALLINT">
                <constraints nullable="false" />
            </column>
            <column name="ordering" type="ruleform.ordinal_number" />
            <column name="notes" type="VARCHAR(10485760)" />
            <column name="updated_by" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" type="TIMESTAMPTZ">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.unit_network" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-361">
        <addForeignKeyConstraint baseColumnNames="child" baseTableName="ruleform.unit_network" constraintName="unit_network_child_fkey"
            deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="ruleform.unit" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-362">
        <addForeignKeyConstraint baseColumnNames="parent" baseTableName="ruleform.unit_network" constraintName="unit_network_parent_fkey"
            deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="ruleform.unit" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-363">
        <addForeignKeyConstraint baseColumnNames="relationship" baseTableName="ruleform.unit_network"
            constraintName="unit_network_relationship_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.relationship" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-364">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.unit_network" constraintName="unit_network_updated_by_fkey"
            deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-421">
        <addUniqueConstraint columnNames="parent, relationship, child" constraintName="unit_network_key" deferrable="false"
            disabled="false" initiallyDeferred="false" tableName="ruleform.unit_network" />
    </changeSet>


    <changeSet id="2" author="hhildebrand">
        <sql><![CDATA[
            GRANT ALL ON TABLE ruleform.unit_network TO core;
            GRANT SELECT ON TABLE ruleform.unit_network TO core_read_only;
            GRANT SELECT, UPDATE, INSERT, DELETE ON TABLE ruleform.unit_network TO core_read_write;
            ]]>
        </sql>
        <rollback />
    </changeSet>
    <changeSet id="3" author="hhildebrand">
        <sql> ALTER TABLE ruleform.unit_network OWNER TO core; </sql>
        <rollback />
    </changeSet>

</databaseChangeLog>
