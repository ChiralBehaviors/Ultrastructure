            initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="relationship" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="status_code_entity" baseTableName="agency_grouping" constraintName="agency_grouping_status_code_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="status_code" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="unit_entity" baseTableName="agency_grouping" constraintName="agency_grouping_unit_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="unit" />

        <addUniqueConstraint schemaName="ruleform" columnNames="agency_entity, grouping_agency"
            constraintName="agency_grouping_agency_key_agency" deferrable="false" disabled="false" initiallyDeferred="true" tableName="agency_grouping" />
        <addUniqueConstraint schemaName="ruleform" columnNames="attribute_entity, grouping_agency"
            constraintName="agency_grouping_agency_key_attribute" deferrable="false" disabled="false" initiallyDeferred="true" tableName="agency_grouping" />
        <addUniqueConstraint schemaName="ruleform" columnNames="interval_entity, grouping_agency"
            constraintName="agency_grouping_agency_key_interval" deferrable="false" disabled="false" initiallyDeferred="true" tableName="agency_grouping" />
        <addUniqueConstraint schemaName="ruleform" columnNames="location_entity, grouping_agency"
            constraintName="agency_grouping_agency_key_location" deferrable="false" disabled="false" initiallyDeferred="true" tableName="agency_grouping" />
