<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="1"
        author="hparry">
        <sql> CREATE TRIGGER combined_authorizations_update_date BEFORE INSERT OR UPDATE ON
            ruleform.combined_authorizations FOR EACH ROW EXECUTE PROCEDURE ruleform.set_update_date(); </sql>
        <rollback> DROP TRIGGER combined_authorizations ON ruleform.combined_authorizations; </rollback>
    </changeSet>
</databaseChangeLog>
