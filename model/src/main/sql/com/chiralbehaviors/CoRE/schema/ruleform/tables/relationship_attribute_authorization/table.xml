    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-307">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="relationship_attribute_authorization" constraintName="relationship_attribute_authorization_updated_by_fkey"
            deferrable="true" initiallyDeferred="false" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-407">
        <addUniqueConstraint schemaName="ruleform" columnNames="classification, classifier, authorized_attribute, sequence_number"
            constraintName="relationship_attribute_authorizat_classification_attribute_clas" deferrable="false" disabled="false"
            initiallyDeferred="false" tableName="relationship_attribute_authorization" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-513">
        <createIndex schemaName="ruleform" indexName="relationship_attribute_authorization_updated_by_fkey_idx" tableName="relationship_attribute_authorization"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
    </changeSet>


