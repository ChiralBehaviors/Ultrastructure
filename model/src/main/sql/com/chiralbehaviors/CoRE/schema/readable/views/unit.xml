<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet id="2.0.0" author="hhildebrand">
        <createView schemaName="readable" viewName="unit_attribute_authorization" replaceIfExists="true"><![CDATA[ 
			 SELECT b.id, 
			     b.name, 
                 b.description, 
			     b.abbreviation,
			     b.datatype,
			     b.min,
			     b.max,
			     b.enumerated,
			     b.notes, 
			     up.name AS updated_by,
			     b.version
			   FROM unit b
			   JOIN agency up ON b.updated_by = up.id
            ]]>
        </createView>
        <rollback>
            <dropView viewName="readable.unit" />
        </rollback>
    </changeSet>
</databaseChangeLog>
