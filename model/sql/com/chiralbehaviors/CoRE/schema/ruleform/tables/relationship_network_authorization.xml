<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform" remarks="Defines rules stating what network relationships are authorized for particular relationships"
            tableName="relationship_network_authorization"
        >
            <column name="workspace" type="uuid" />
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="relationship_network_authorization_pkey" />
            </column>
            <column name="name" type="text" />
            <column name="classifier" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="classification" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="authorized_parent" type="uuid" />
            <column name="authorized_relationship" type="uuid" />
            <column name="cardinality" type="INT4" />
            <column name="child_relationship" remarks="the relationship between the classified child and its child" type="uuid" />
            <column name="grouping_agency" remarks="the authoratative agency" type="uuid" />
            <column name="notes" remarks="Additional notes regarding this rule" type="TEXT" />
            <column name="updated_by" remarks="The relationship that last updated this rule" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
        </createTable>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="child_relationship" baseTableName="relationship_network_authorization" constraintName="relationship_network_authorization_child_relationship_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="relationship" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="authorized_parent" baseTableName="relationship_network_authorization" constraintName="relationship_network_authorization_authorized_parent_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="relationship" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="authorized_relationship" baseTableName="relationship_network_authorization" constraintName="relationship_network_authorization_authorized_relationship_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="relationship" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="classifier" baseTableName="relationship_network_authorization" constraintName="relationship_network_authorization_classifier_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="relationship" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="classification" baseTableName="relationship_network_authorization" constraintName="relationship_network_authorization_classification_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="relationship" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="grouping_agency" baseTableName="relationship_network_authorization" constraintName="relationship_network_authorization_grouping_agency_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="relationship_network_authorization" constraintName="relationship_network_authorization_updated_by_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="agency" />
        <addUniqueConstraint schemaName="ruleform"
            columnNames="classifier, classification, authorized_parent, authorized_relationship, child_relationship, grouping_agency"
            constraintName="relationship_relationship_authorizatio_relationship_classification_attri_key" deferrable="false" disabled="false"
            initiallyDeferred="true" tableName="relationship_network_authorization" />
        <addUniqueConstraint schemaName="ruleform" columnNames="classifier, classification, grouping_agency"
            constraintName="relationship_network_authorization_facet_key" deferrable="false" disabled="false" initiallyDeferred="true"
            tableName="relationship_network_authorization" />
        <createIndex schemaName="ruleform" indexName="relationship_network_authorization_updated_by_fkey_idx" tableName="relationship_network_authorization"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="relationship_network_authorization_classifier_fkey_idx" tableName="relationship_network_authorization"
            unique="false"
        >
            <column name="classifier" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="relationship_network_authorization_classification_fkey_idx" tableName="relationship_network_authorization"
            unique="false"
        >
            <column name="classification" />
        </createIndex>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="workspace" baseTableName="relationship_network_authorization" constraintName="relationship_network_authorization_workspace_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="workspace_authorization" />
        <rollback>
            <dropTable tableName="relationship_network_authorization" />
        </rollback>
    </changeSet>
</databaseChangeLog>
