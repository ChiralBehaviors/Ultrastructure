<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-9">
        <createTable schemaName="ruleform"
            remarks="Existential ruleform for all attributes in the CoRE database.  This table defines and describes all attributes."
            tableName="attribute"
        >
            <column name="id" type="CHAR(22)">
                <constraints primaryKey="true" primaryKeyName="attribute_pkey" />
            </column>
            <column name="name" type="VARCHAR(10485760)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="VARCHAR(10485760)" />
            <column name="notes" type="VARCHAR(10485760)" />
            <column name="updated_by" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" type="TIMESTAMPTZ">
                <constraints nullable="false" />
            </column>
            <column defaultValueNumeric="0" name="pinned" type="SMALLINT">
                <constraints nullable="false" />
            </column>
            <column defaultValueNumeric="0" name="inheritable" type="SMALLINT">
                <constraints nullable="false" />
            </column>
            <column name="value_type" type="SMALLINT">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="attribute" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-126">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="attribute" constraintName="attribute_updated_by_fkey" deferrable="true"
            initiallyDeferred="false" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-446">
        <createIndex schemaName="ruleform" indexName="attribute_updated_by_fkey_idx" tableName="attribute" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
