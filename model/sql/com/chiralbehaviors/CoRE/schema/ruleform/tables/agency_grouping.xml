        </createIndex>
        <createIndex schemaName="ruleform" indexName="agency_grouping_grouping_agency_fkey_idx" tableName="agency_grouping" unique="false">
            <column name="grouping_agency" />
        </createIndex>
        <sql><![CDATA[
            ALTER TABLE ruleform.agency_grouping ADD CONSTRAINT
            wsa_single_reference CHECK((
                ruleform.null_zero(agency_entity) +
                ruleform.null_zero(attribute_entity) + 
                ruleform.null_zero(interval_entity) +
                ruleform.null_zero(location_entity) +
                ruleform.null_zero(relationship_entity) +
                ruleform.null_zero(status_code_entity) +
                ruleform.null_zero(unit_entity)
                ) = 1)
        ]]>
        </sql>
    </changeSet>
</databaseChangeLog>
