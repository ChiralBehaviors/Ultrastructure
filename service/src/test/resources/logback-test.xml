<?xml version="1.0" encoding="UTF-8"?>

<configuration>
  <appender name="C" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${testing.logging.consoleLayoutPattern}</pattern>
    </encoder>
  </appender>
  <logger name="org.dbunit">
    <level value="${testing.logging.dbunit}"/>
  </logger>
  <logger name="com.chiralbehaviors.CoRE">
    <level value="${testing.logging.core}"/>
  </logger>
  <logger name="org.apache.openjpa">
    <level value="ERROR"/>
  </logger>
  
  <root>
    <level value="INFO"/>
    <appender-ref ref="C"/>
  </root>
</configuration>
