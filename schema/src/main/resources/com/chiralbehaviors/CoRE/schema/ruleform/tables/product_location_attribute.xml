<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform" tableName="product_location_attribute">
            <column name="workspace" type="uuid" />
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="product_location_attribute_pkey" />
            </column>
            <column name="product_location" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="attribute" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="key" type="TEXT" />
            <column name="numeric_value" type="numeric" />
            <column name="integer_value" type="INT4" />
            <column name="boolean_value" type="boolean" />
            <column name="text_value" type="TEXT" />
            <column name="timestamp_value" type="TIMESTAMP WITH TIME ZONE" />
            <column name="binary_value" type="BYTEA" />
            <column defaultValueComputed="1" name="sequence_number" type="INT4">
                <constraints nullable="false" />
            </column>
            <column name="unit" type="uuid" />
            <column name="notes" type="TEXT" />
            <column name="updated_by" defaultValue= "'00000000-0000-0000-0000-000000000003'" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
            <column name="updated" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false" />
            </column>
            <column name="json_value" type="jsonb" />
        </createTable>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="attribute" baseTableName="product_location_attribute" constraintName="product_location_attribute_attribute_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="product_location" baseTableName="product_location_attribute" constraintName="product_location_attribute_product_location_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="product_location" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="product_location_attribute" constraintName="product_location_attribute_updated_by_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="SET DEFAULT" referencedColumnNames="id" referencedTableName="agency" />
        <addUniqueConstraint schemaName="ruleform" columnNames="product_location, attribute, sequence_number"
            constraintName="product_location_attribute_agency_key" deferrable="false" disabled="false" initiallyDeferred="true"
            tableName="product_location_attribute" />
        <createIndex schemaName="ruleform" indexName="product_location_attribute_updated_by_fkey_idx" tableName="product_location_attribute"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="product_location_attribute_key_idx" tableName="product_location_attribute"
            unique="false"
        >
            <column name="key" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="product_location_attribute_numeric_idx" tableName="product_location_attribute"
            unique="false"
        >
            <column name="numeric_value" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="product_location_attribute_timestampo_idx" tableName="product_location_attribute"
            unique="false"
        >
            <column name="timestamp_value" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="product_location_attribute_product_location_idx" tableName="product_location_attribute"
            unique="false"
        >
            <column name="product_location" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="product_location_attribute_attribute_idx" tableName="product_location_attribute"
            unique="false"
        >
            <column name="attribute" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="product_location_attribute_unit_idx" tableName="product_location_attribute"
            unique="false"
        >
            <column name="unit" />
        </createIndex>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="workspace" baseTableName="product_location_attribute" constraintName="product_location_attribute_workspace_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="workspace_authorization" />
    </changeSet>
</databaseChangeLog>
