<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-32">
        <createTable tableName="ruleform.product">
            <column autoIncrement="true" name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="product_pkey" />
            </column>
            <column name="name" type="VARCHAR(10485760)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="VARCHAR(10485760)" />
            <column name="notes" type="VARCHAR(10485760)" />
            <column name="updated_by" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" type="TIMESTAMPTZ">
                <constraints nullable="false" />
            </column>
            <column defaultValueNumeric="0" name="pinned" type="SMALLINT">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.product" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-272">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.product" constraintName="product_updated_by_fkey"
            deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-447">
        <createIndex indexName="case_insensitive_product_name_idx" tableName="ruleform.product" unique="false">
            <column name="lower((name)::text)" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-509">
        <createIndex indexName="product_updated_by_fkey_idx" tableName="ruleform.product" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
