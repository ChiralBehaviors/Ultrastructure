<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet author="hhildebrand" id="2.0.0">
		<createTable schemaName="ruleform"
			tableName="child_sequencing_authorization">
			<column name="id" type="uuid">
				<constraints primaryKey="true"
					primaryKeyName="child_sequencing_authorization_pkey"
					nullable="false" />
			</column>
			<column name="service" type="uuid">
				<constraints nullable="false" />
			</column>
			<column name="status_code" type="uuid">
				<constraints nullable="false" />
			</column>
			<column defaultValueComputed="1" name="sequence_number"
				type="INT4">
				<constraints nullable="false" />
			</column>
			<column name="next_child" type="uuid" />
			<column name="next_child_status" type="uuid" />
			<column name="replace_product" type="boolean"
				defaultValue="false">
				<constraints nullable="false" />
			</column>
			<column name="notes" type="TEXT" />
			<column name="updated_by"
				defaultValue="'00000000-0000-0000-0000-000000000003'" type="uuid">
				<constraints nullable="false" />
			</column>
			<column name="version" type="INT4" />
			<column name="authority" type="uuid" />
		</createTable>

		<addUniqueConstraint schemaName="ruleform"
			columnNames="service, status_code, next_child, sequence_number"
			constraintName="child_sequencing_authorization_service_status_code_sequ_"
			deferrable="true" disabled="false" initiallyDeferred="true"
			tableName="child_sequencing_authorization" />

		<addForeignKeyConstraint
			baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
			baseColumnNames="authority"
			baseTableName="child_sequencing_authorization"
			constraintName="child_sequencing_authorization_authority_fkey"
			deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
			referencedColumnNames="id" referencedTableName="existential" />
		<addForeignKeyConstraint
			baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
			baseColumnNames="next_child"
			baseTableName="child_sequencing_authorization"
			constraintName="child_sequencing_authorization_next_child_fkey"
			deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
			referencedColumnNames="id" referencedTableName="existential" />
		<addForeignKeyConstraint
			baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
			baseColumnNames="next_child_status"
			baseTableName="child_sequencing_authorization"
			constraintName="child_sequencing_authorization_next_child_status_fkey"
			deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
			referencedColumnNames="id" referencedTableName="existential" />
		<addForeignKeyConstraint
			baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
			baseColumnNames="service"
			baseTableName="child_sequencing_authorization"
			constraintName="child_sequencing_authorization_service_fkey"
			deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
			referencedColumnNames="id" referencedTableName="existential" />
		<addForeignKeyConstraint
			baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
			baseColumnNames="status_code"
			baseTableName="child_sequencing_authorization"
			constraintName="child_sequencing_authorization_status_code_fkey"
			deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
			referencedColumnNames="id" referencedTableName="existential" />
		<addForeignKeyConstraint
			baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
			baseColumnNames="updated_by"
			baseTableName="child_sequencing_authorization"
			constraintName="child_sequencing_authorization_updated_by_fkey"
			deferrable="true" initiallyDeferred="true" onDelete="SET DEFAULT"
			referencedColumnNames="id" referencedTableName="existential" />

		<createIndex schemaName="ruleform"
			indexName="child_sequencing_authorization_status_code_fkey_idx"
			tableName="child_sequencing_authorization" unique="false">
			<column name="status_code" />
		</createIndex>
		<createIndex schemaName="ruleform"
			indexName="child_sequencing_authorization_next_child_fkey_idx"
			tableName="child_sequencing_authorization" unique="false">
			<column name="next_child" />
		</createIndex>
		<createIndex schemaName="ruleform"
			indexName="child_sequencing_authorization_next_child_status_fkey_idx"
			tableName="child_sequencing_authorization" unique="false">
			<column name="next_child_status" />
		</createIndex>
		<createIndex schemaName="ruleform"
			indexName="child_sequencing_authorization_updated_by_fkey_idx"
			tableName="child_sequencing_authorization" unique="false">
			<column name="updated_by" />
		</createIndex>
		<createIndex schemaName="ruleform"
			indexName="child_sequencing_authorization_authority_idx"
			tableName="child_sequencing_authorization" unique="false">
			<column name="authority" />
		</createIndex>
	</changeSet>
</databaseChangeLog>
