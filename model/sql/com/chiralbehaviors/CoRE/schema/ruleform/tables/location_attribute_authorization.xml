<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform"
            remarks="Defines rules stating what attributes (and values thereof) are authorized for particular Locations" tableName="location_attribute_authorization"
        >
            <column name="defining_product" type="uuid" />
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="location_attribute_authorization_pkey" />
            </column>
            <column name="network_authorization" remarks="The network relationship that authorizes the attributes" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="authorized_attribute" remarks="An Attribute the existential entity is expected to have" type="uuid">
                <constraints nullable="true" />
            </column>
            <column name="authorized_network_attribute" remarks="An Attribute the child network edge is expected to have" type="uuid">
                <constraints nullable="true" />
            </column>
            <column name="grouping_agency"
                remarks="If present, along with 'location_attribute' and 'location_value', used to select an entire grouping of Locations that can be acceptable values"
                type="uuid" />
            <column name="boolean_value" type="boolean" />
            <column name="binary_value" type="BYTEA" />
            <column name="text_value" remarks="Contains a single acceptable text-value if 'attribute' has a data type of 'text'"
                type="TEXT" />
            <column name="integer_value" remarks="Contains a single acceptable integer-value if 'attribute' has a data type of 'integer'"
                type="INT4" />
            <column name="numeric_value" remarks="Contains a single acceptable numeric-value if 'attribute' has a data type of 'numeric'"
                type="numeric" />
            <column name="timestamp_value" type="TIMESTAMPTZ" />
            <column name="notes" remarks="Additional notes regarding this rule" type="TEXT" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
        </createTable>
        <rollback>
            <dropTable tableName="location_attribute_authorization" />
        </rollback>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="authorized_attribute" baseTableName="location_attribute_authorization" constraintName="location_attribute_authorization_authorized_attribute_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="authorized_network_attribute" baseTableName="location_attribute_authorization" constraintName="location_attribute_authorization_attribute_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="network_authorization" baseTableName="location_attribute_authorization" constraintName="location_attribute_auth_network_authorization_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="location_network_authorization" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="grouping_agency" baseTableName="location_attribute_authorization" constraintName="location_attribute_authorization_grouping_agency_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="location_attribute_authorization" constraintName="location_attribute_authorization_updated_by_fkey"
            deferrable="false" initiallyDeferred="true" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="agency" />
        <addUniqueConstraint schemaName="ruleform"
            columnNames="network_authorization, authorized_attribute, authorized_network_attribute, grouping_agency" constraintName="location_attribute_authorizatio_agency_classification_attri_key"
            deferrable="false" disabled="false" initiallyDeferred="true" tableName="location_attribute_authorization" />
        <createIndex schemaName="ruleform" indexName="location_attribute_authorization_updated_by_fkey_idx" tableName="location_attribute_authorization"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="location_attribute_authorization_network_authorization_fkey_idx"
            tableName="location_attribute_authorization" unique="false"
        >
            <column name="network_authorization" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="location_attribute_authorization_authorized_attribute_fkey_idx" tableName="location_attribute_authorization"
            unique="false"
        >
            <column name="authorized_attribute" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="location_attribute_authorization_authorized_network_attribute_fkey_idx"
            tableName="location_attribute_authorization" unique="false"
        >
            <column name="authorized_network_attribute" />
        </createIndex>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="defining_product" baseTableName="location_attribute_authorization" constraintName="location_attribute_authorization_defining_product_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="product" />
    </changeSet>
</databaseChangeLog>
