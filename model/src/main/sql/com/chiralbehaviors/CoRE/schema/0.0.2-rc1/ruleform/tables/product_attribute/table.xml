<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-33">
        <createTable schemaName="ruleform" tableName="product_attribute">
            <column name="id" type="CHAR(22)">
                <constraints primaryKey="true" primaryKeyName="product_attribute_pkey" />
            </column>
            <column name="product" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column name="attribute" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column name="key" type="TEXT" />
            <column name="numeric_value" type="numeric" />
            <column name="integer_value" type="INT4" />
            <column name="boolean_value" type="SMALLINT" />
            <column name="text_value" type="TEXT" />
            <column name="timestamp_value" type="TIMESTAMP WITH TIME ZONE" />
            <column name="binary_value" type="BYTEA" />
            <column defaultValueComputed="1" name="sequence_number" type="sequence_number">
                <constraints nullable="false" />
            </column>
            <column name="unit" type="CHAR(22)" />
            <column name="notes" type="TEXT" />
            <column name="updated_by" defaultValue="AAAAAAAAAAAAAAAAAAAAAQ" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" type="TIMESTAMPTZ">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="product_attribute" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-212">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="attribute" baseTableName="product_attribute" constraintName="product_attribute_attribute_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-218">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="product" baseTableName="product_attribute" constraintName="product_attribute_product_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="product" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-220">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="product_attribute" constraintName="product_attribute_updated_by_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-395">
        <addUniqueConstraint schemaName="ruleform" columnNames="product, attribute, sequence_number" constraintName="product_attribute_key"
            deferrable="false" disabled="false" initiallyDeferred="true" tableName="product_attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-481">
        <createIndex schemaName="ruleform" indexName="product_attribute_attribute_fkey_idx" tableName="product_attribute"
            unique="false"
        >
            <column name="attribute" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-483">
        <createIndex schemaName="ruleform" indexName="product_attribute_product_fkey_idx" tableName="product_attribute" unique="false">
            <column name="product" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-484">
        <createIndex schemaName="ruleform" indexName="product_attribute_unit_fkey_idx" tableName="product_attribute" unique="false">
            <column name="unit" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-485">
        <createIndex schemaName="ruleform" indexName="product_attribute_updated_by_fkey_idx" tableName="product_attribute"
            unique="false"
        >
            <column name="updated_by"  />
        </createIndex>
    </changeSet>
</databaseChangeLog>
