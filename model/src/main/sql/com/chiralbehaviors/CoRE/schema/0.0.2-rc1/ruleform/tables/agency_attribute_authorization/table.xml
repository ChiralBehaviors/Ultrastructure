<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-4">
        <createTable schemaName="ruleform" remarks="Defines rules stating what attributes (and values thereof) are authorized for particular agencys"
            tableName="agency_attribute_authorization"
        >
            <column name="id" type="CHAR(22)">
                <constraints primaryKey="true" primaryKeyName="agency_attribute_authorization_pkey" />
            </column>
            <column name="classification"
                remarks="In conjunction with the 'agency' column, determines the classification criteria for selecting attributes a certain agency must have"
                type="CHAR(22)"
            >
                <constraints nullable="false" />
            </column>
            <column name="classifier"
                remarks="In conjunction with the 'classification' column, determines the classification criteria for selecting attributes a certain agency must have"
                type="CHAR(22)"
            >
                <constraints nullable="false" />
            </column>
            <column name="authorized_attribute" remarks="An Attribute a agency is expected to have" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="1" name="sequence_number"
                remarks="Ordering and uniqueness, for when an Attribute can have multiple acceptable values" type="sequence_number"
            >
                <constraints nullable="false" />
            </column>
            <column name="boolean_value" type="SMALLINT" />
            <column name="binary_value" type="BYTEA" />
            <column name="text_value" remarks="Contains a single acceptable text-value if 'attribute' has a data type of 'text'"
                type="TEXT" />
            <column name="integer_value" type="INT4" />
            <column name="numeric_value" type="numeric" />
            <column name="timestamp_value" type="TIMESTAMPTZ" />
            <column name="grouping_agency" type="CHAR(22)" />
            <column name="notes" remarks="Additional notes regarding this rule" type="TEXT" />
            <column name="updated_by" defaultValue="AAAAAAAAAAAAAAAAAAAAAQ" remarks="The agency that last updated this rule" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" remarks="The date this rule was last changed"
                type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="agency_attribute_authorization" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-89">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"  baseColumnNames="authorized_attribute" baseTableName="agency_attribute_authorization"
            constraintName="agency_attribute_authorization_attribute_fkey" deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-90">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"  baseColumnNames="classification" baseTableName="agency_attribute_authorization"
            constraintName="agency_attribute_authorization_classification_attribute_fkey" deferrable="true" initiallyDeferred="true"
            onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="relationship" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-91">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"  baseColumnNames="classifier" baseTableName="agency_attribute_authorization"
            constraintName="agency_attribute_authorization_classifier_fkey" deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-92">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"  baseColumnNames="grouping_agency" baseTableName="agency_attribute_authorization"
            constraintName="agency_attribute_authorization_grouping_agency_fkey" deferrable="false" initiallyDeferred="true" onDelete="CASCADE"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-93">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"  baseColumnNames="updated_by" baseTableName="agency_attribute_authorization"
            constraintName="agency_attribute_authorization_updated_by_fkey" deferrable="true" initiallyDeferred="true" onDelete="SET DEFAULT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-370">
        <addUniqueConstraint schemaName="ruleform" columnNames="classification, classifier, authorized_attribute, sequence_number"
            constraintName="agency_attribute_authorizat_classification_attribute_clas_key" deferrable="false" disabled="false"
            initiallyDeferred="true" tableName="agency_attribute_authorization" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-425">
        <createIndex schemaName="ruleform" indexName="agency_attribute_authorization_updated_by_fkey_idx" tableName="agency_attribute_authorization"
            unique="false"
        >
            <column name="updated_by"   />
        </createIndex>
    </changeSet>
</databaseChangeLog>
