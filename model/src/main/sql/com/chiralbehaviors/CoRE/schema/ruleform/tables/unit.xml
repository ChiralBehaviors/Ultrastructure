<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform" tableName="unit">
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="unit_pkey" />
            </column>
            <column name="name" type="TEXT">
                <constraints nullable="false" />
            </column>
            <column name="description" type="TEXT" />
            <column name="abbreviation" type="VARCHAR(10)" />
            <column name="notes" type="TEXT" />
            <column name="updated_by" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
            <column name="datatype" remarks="The underlying datatype of a measurement of this kind of Unit" type="TEXT" />
            <column name="min" remarks="If the unit is integer or numeric and has a minimum value, it is stored here." type="numeric" />
            <column name="max" remarks="If the unit is integer or numeric and has a maximum value, it is stored here." type="numeric" />
            <column defaultValueBoolean="false" name="enumerated"
                remarks="If the allowable values of the unit constitute an enumerated set, then this should be TRUE." type="boolean" />
        </createTable>
        <rollback>
            <dropTable tableName="unit" />
        </rollback>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="unit" constraintName="unit_updated_by_fkey" deferrable="true" initiallyDeferred="true"
            onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
        <addUniqueConstraint schemaName="ruleform" columnNames="name" constraintName="unit_name_key" deferrable="false"
            disabled="false" initiallyDeferred="true" tableName="unit" />
        <createIndex schemaName="ruleform" indexName="unit_updated_by_fkey_idx" tableName="unit" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>

</databaseChangeLog>
