    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-254">
        <addForeignKeyConstraint baseColumnNames="classification" baseTableName="ruleform.product_network_authorization"
            constraintName="product_network_authorization_classification_fkey" deferrable="false" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.relationship" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-255">
        <addForeignKeyConstraint baseColumnNames="classifier" baseTableName="ruleform.product_network_authorization"
            constraintName="product_network_authorization_classifier_fkey" deferrable="false" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.product" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-256">
        <addForeignKeyConstraint baseColumnNames="grouping_agency" baseTableName="ruleform.product_network_authorization"
