<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-61">
        <createTable tableName="ruleform.unit_attribute">
            <column autoIncrement="true" name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="unit_attribute_pkey" />
            </column>
            <column name="unit_rf" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="attribute" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="numeric_value" type="numeric" />
            <column name="integer_value" type="INT4" />
            <column name="boolean_value" type="SMALLINT" />
            <column name="text_value" type="VARCHAR(10485760)" />
            <column name="timestamp_value" type="TIMESTAMP WITH TIME ZONE" />
            <column name="binary_value" type="BYTEA" />
            <column name="unit" type="INT8" />
            <column defaultValueComputed="1" name="sequence_number" type="ruleform.sequence_number">
                <constraints nullable="false" />
            </column>
            <column name="notes" type="VARCHAR(10485760)" />
            <column name="updated_by" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" type="TIMESTAMPTZ">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.unit_attribute" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-358">
        <addForeignKeyConstraint baseColumnNames="unit" baseTableName="ruleform.unit_attribute" constraintName="unit_attribute_unit_fkey"
            deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="ruleform.unit" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-359">
        <addForeignKeyConstraint baseColumnNames="unit_rf" baseTableName="ruleform.unit_attribute" constraintName="unit_attribute_unit_rf_fkey"
            deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="ruleform.unit" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-352">
        <addForeignKeyConstraint baseColumnNames="attribute" baseTableName="ruleform.unit_attribute" constraintName="unit_attribute_attribute_fkey"
            deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="ruleform.attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-360">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.unit_attribute"
            constraintName="unit_attribute_updated_by_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-419">
        <addUniqueConstraint columnNames="unit, attribute" constraintName="unit_attribute_unit_key" deferrable="false"
            disabled="false" initiallyDeferred="false" tableName="ruleform.unit_attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-525">
        <createIndex indexName="unit_attribute_updated_by_fkey_idx" tableName="ruleform.unit_attribute" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>

    <changeSet id="2" author="hhildebrand">
        <sql> ALTER TABLE ruleform.unit_attribute OWNER TO core; </sql>
        <rollback />
    </changeSet>
    <changeSet id="4" author="hhildebrand">
        <sql><![CDATA[
            GRANT ALL ON TABLE ruleform.unit_attribute TO core;
            GRANT SELECT ON TABLE ruleform.unit_attribute TO core_read_only;
            GRANT SELECT, UPDATE, INSERT, DELETE ON TABLE ruleform.unit_attribute TO core_read_write;
            ]]>
        </sql>
        <rollback />
    </changeSet>
</databaseChangeLog>
