<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform"
            remarks="Existential ruleform for all attributes in the CoRE database.  This table defines and describes all attributes."
            tableName="attribute"
        >
            <column name="workspace" type="uuid" />
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="attribute_pkey" />
            </column>
            <column name="name" type="TEXT">
                <constraints nullable="false" />
            </column>
            <column name="description" type="TEXT" />
            <column name="notes" type="TEXT" />
            <column name="updated_by" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
            <column defaultValueBoolean="false" name="inheritable" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="value_type" type="INT4">
                <constraints nullable="false" />
            </column>
            <column name="keyed" type="boolean">
                <constraints nullable="false" />
            </column>
            <column name="indexed" type="boolean">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="attribute" />
        </rollback>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="attribute" constraintName="attribute_updated_by_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="SET DEFAULT"  referencedColumnNames="id" referencedTableName="agency" />
        <createIndex schemaName="ruleform" indexName="attribute_updated_by_fkey_idx" tableName="attribute" unique="false">
            <column name="updated_by" />
        </createIndex>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="workspace" baseTableName="attribute" constraintName="attribute_workspace_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="workspace_authorization" />
    </changeSet>
</databaseChangeLog>
