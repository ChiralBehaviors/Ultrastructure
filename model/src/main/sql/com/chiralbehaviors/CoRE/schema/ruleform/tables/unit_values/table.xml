<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-64">
        <createTable tableName="ruleform.unit_values">
            <column autoIncrement="true" name="id" remarks="Otherwise meaningless identifier for a rule" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="unit_values_pkey" />
            </column>
            <column name="unit" remarks="The unit whose values are being enumerated" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="sequence_number" remarks="The ordering of this value in the set of values for the given unit" type="ruleform.sequence_number">
                <constraints nullable="false" />
            </column>
            <column name="integer_value" remarks="A permitted integer value for this unit" type="INT4" />
            <column name="numeric_value" remarks="A permitted numeric value for this unit" type="numeric" />
            <column name="text_value" remarks="A permitted text value for this unit" type="TEXT" />
            <column name="boolean_value" remarks="A permitted boolean value for this unit" type="SMALLINT" />
            <column name="product_value" remarks="A permitted Product value for this unit" type="INT8" />
            <column name="notes" remarks="Usage notes for this rule" type="VARCHAR(10485760)" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date"
                remarks="The time at which this rule was last updated" type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.unit_values" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-366">
        <addForeignKeyConstraint baseColumnNames="product_value" baseTableName="ruleform.unit_values"
            constraintName="unit_values_product_value_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.product" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-367">
        <addForeignKeyConstraint baseColumnNames="unit" baseTableName="ruleform.unit_values" constraintName="unit_values_unit_fkey"
            deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="ruleform.unit" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-368">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.unit_values" constraintName="unit_values_updated_by_fkey"
            deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-422">
        <addUniqueConstraint columnNames="unit, sequence_number" constraintName="unit_values_unit_key" deferrable="false"
            disabled="false" initiallyDeferred="false" tableName="ruleform.unit_values" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-527">
        <createIndex indexName="unit_values_unit_fkey_idx" tableName="ruleform.unit_values" unique="false">
            <column name="unit" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-528">
        <createIndex indexName="unit_values_updated_by_fkey_idx" tableName="ruleform.unit_values" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
