<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform" remarks="Existential ruleform for all status codes (job states)" tableName="status_code">
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="status_code_pkey" />
            </column>
            <column name="name" remarks="The unique name of a status code" type="TEXT">
                <constraints nullable="false" />
            </column>
            <column name="description" remarks="A free-form textual description of a status code" type="TEXT" />
            <column name="notes" remarks="Additional notes regarding usage of the status code" type="TEXT" />
            <column defaultValueBoolean="true" name="fail_parent"
                remarks="Setting a job to this status code will trigger a cascading failure up to its parent" type="boolean"
            >
                <constraints nullable="false" />
            </column>
            <column defaultValueBoolean="true" name="propagate_children"
                remarks="Setting a job to this status code will trigger the propagation of child (implicit) jobs" type="boolean"
            >
                <constraints nullable="false" />
            </column>
            <column name="updated_by" remarks="The agency that last updated this rule" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
        </createTable>
        <rollback>
            <dropTable tableName="status_code" />
        </rollback>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="status_code" constraintName="status_code_updated_by_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
        <createIndex schemaName="ruleform" indexName="status_code_updated_by_fkey_idx" tableName="status_code" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
