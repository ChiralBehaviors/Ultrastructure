<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-42">
        <createTable remarks="Defines rules stating what network relationships are authorized for particular Entities"
            tableName="ruleform.product_network_authorization"
        >
            <column autoIncrement="true" name="id" remarks="Unique identifier" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="product_network_authorization_pkey" />
            </column>
            <column name="classification"
                remarks="In conjunction with the 'classifier' column, determines the classification criteria for selecting network relationships a certain Product must have"
                type="INT8"
            >
                <constraints nullable="false" />
            </column>
            <column name="classifier"
                remarks="In conjunction with the 'classification' column, determines the classification criteria for selecting network relationships a certain Product must have"
                type="INT8"
            >
                <constraints nullable="false" />
            </column>
            <column name="authorized_parent" remarks="A network parent a Product is expected to have" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="authorized_relationship" remarks="A network relationship a Product is expected to have" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="1" name="sequence_number"
                remarks="Ordering and uniqueness, for when an Attribute can have multiple acceptable values" type="ruleform.sequence_number"
            >
                <constraints nullable="false" />
            </column>
            <column name="grouping_agency" remarks="A network parent an Product is expected to have" type="INT8" />
            <column name="notes" remarks="Additional notes regarding this rule" type="VARCHAR(10485760)" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" remarks="The date this rule was last changed"
                type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.product_network_authorization" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-252">
        <addForeignKeyConstraint baseColumnNames="authorized_parent" baseTableName="ruleform.product_network_authorization"
            constraintName="product_network_authorization_authorized_parent_fkey" deferrable="false" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.product" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-253">
        <addForeignKeyConstraint baseColumnNames="authorized_relationship" baseTableName="ruleform.product_network_authorization"
