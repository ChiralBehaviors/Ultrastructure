<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform" tableName="attribute_meta_attribute">
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="attribute_attribute_pkey" />
            </column>
            <column name="attribute" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="meta_attribute" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="key" type="TEXT" />
            <column name="numeric_value" type="numeric" />
            <column name="boolean_value" type="boolean" />
            <column name="text_value" type="TEXT" />
            <column name="binary_value" type="BYTEA" />
            <column name="integer_value" type="INT4" />
            <column name="timestamp_value" type="TIMESTAMP WITH TIME ZONE" />
            <column name="unit_value" type="uuid" />
            <column name="unit" type="uuid" />
            <column name="notes" type="TEXT" />
            <column name="updated_by" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
            <column defaultValueComputed="1" name="sequence_number" type="sequence_number">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="attribute_meta_attribute_kind" />
        </rollback>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="meta_attribute" baseTableName="attribute_meta_attribute" constraintName="attribute_attribute_attribute_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="attribute" baseTableName="attribute_meta_attribute" constraintName="attribute_attribute_base_attribute_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="unit" baseTableName="attribute_meta_attribute" constraintName="attribute_attribute_unit_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="unit" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="unit_value" baseTableName="attribute_meta_attribute" constraintName="attribute_attribute_unit_value_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="unit" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="attribute_meta_attribute" constraintName="attribute_attribute_updated_by_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="agency" />
        <addUniqueConstraint schemaName="ruleform" columnNames="attribute, meta_attribute, sequence_number"
            constraintName="attribute_attribute_base_attribute_key" deferrable="false" disabled="false" initiallyDeferred="true"
            tableName="attribute_meta_attribute" />
        <createIndex schemaName="ruleform" indexName="attribute_attribute_attribute_fkey_idx" tableName="attribute_meta_attribute"
            unique="false"
        >
            <column name="meta_attribute" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="attribute_attribute_base_attribute_fkey_idx" tableName="attribute_meta_attribute"
            unique="false"
        >
            <column name="attribute" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="attribute_meta_attribute_updated_by_fkey_idx" tableName="attribute_meta_attribute"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="attribute_meta_attribute_key_idx" tableName="attribute_meta_attribute"
            unique="false"
        >
            <column name="key" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="attribute_meta_attribute_numeric_idx" tableName="attribute_meta_attribute"
            unique="false"
        >
            <column name="numeric_value" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="attribute_meta_attribute_timestamp_idx" tableName="attribute_meta_attribute"
            unique="false"
        >
            <column name="timestamp_value" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
