<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.BorderPane?>
<?import org.controlsfx.control.MasterDetailPane?>


<BorderPane  fx:id="root" prefHeight="600.0" prefWidth="600.0"
	xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.65">
	<center>
		<MasterDetailPane fx:id="masterDetail" detailSide="TOP"
			showDetailNode="false" BorderPane.alignment="CENTER" />
	</center>
	<bottom>
		<ButtonBar prefHeight="40.0" prefWidth="200.0"
			BorderPane.alignment="CENTER">
			<buttons>
				<Button fx:id="edit" mnemonicParsing="false" text="Edit Query" />
				<Button fx:id="refresh" mnemonicParsing="false" text="Refresh" />
			</buttons>
		</ButtonBar>
	</bottom>
</BorderPane>
