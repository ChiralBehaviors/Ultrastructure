<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-15">
        <createTable remarks="Defines rules for navigating nested coordinates" tableName="ruleform.coordinate_nesting">
            <column autoIncrement="true" name="id" remarks="Otherwise meaningless identifier for a rule" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="coordinate_nesting_pkey" />
            </column>
            <column name="attribute" remarks="The attribute to be calculated" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="sequence_number" remarks="The ordering of these nesting rules for a given CoordinateKind and Attribute"
                type="ruleform.sequence_number"
            >
                <constraints nullable="false" />
            </column>
            <column name="inner_attribute" remarks="The attribute of the &quot;inner&quot; Coordinate to manipulate" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="operation" remarks="The operation to perform on both attribute values" type="VARCHAR(10485760)">
                <constraints nullable="false" />
            </column>
            <column name="outer_attribute" remarks="The attribute of the &quot;outer&quot; Coordinate to manipulate" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="notes" remarks="Usage notes for this rule" type="VARCHAR(10485760)" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date"
                remarks="The time at which this rule was last updated" type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.coordinate_nesting" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-136">
        <addForeignKeyConstraint baseColumnNames="attribute" baseTableName="ruleform.coordinate_nesting"
            constraintName="coordinate_nesting_attribute_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-137">
        <addForeignKeyConstraint baseColumnNames="inner_attribute" baseTableName="ruleform.coordinate_nesting"
            constraintName="coordinate_nesting_inner_attribute_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-138">
        <addForeignKeyConstraint baseColumnNames="outer_attribute" baseTableName="ruleform.coordinate_nesting"
            constraintName="coordinate_nesting_outer_attribute_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-139">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.coordinate_nesting"
            constraintName="coordinate_nesting_updated_by_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-379">
        <addUniqueConstraint columnNames="attribute, sequence_number" constraintName="coordinate_nesting_kind_key"
            deferrable="false" disabled="false" initiallyDeferred="false" tableName="ruleform.coordinate_nesting" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-451">
        <createIndex indexName="coordinate_nesting_attribute_fkey_idx" tableName="ruleform.coordinate_nesting" unique="false">
            <column name="attribute" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-452">
        <createIndex indexName="coordinate_nesting_inner_attribute_fkey_idx" tableName="ruleform.coordinate_nesting" unique="false">
            <column name="inner_attribute" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-453">
        <createIndex indexName="coordinate_nesting_outer_attribute_fkey_idx" tableName="ruleform.coordinate_nesting" unique="false">
            <column name="outer_attribute" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-454">
        <createIndex indexName="coordinate_nesting_updated_by_fkey_idx" tableName="ruleform.coordinate_nesting" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
