<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">
    
    <changeSet id="1" author="hhildebrand">
        <sql><![CDATA[
            CREATE DOMAIN ruleform.ordinal_number
              AS integer
               CONSTRAINT valid_ordinal_number CHECK ((VALUE > 0));
            ALTER DOMAIN ruleform.ordinal_number
              OWNER TO core;
             ]]>
        </sql>
        <rollback> DROP DOMAIN ruleform.ordinal_number; </rollback>
    </changeSet>
</databaseChangeLog>
