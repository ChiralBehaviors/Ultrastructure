<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-49">
        <createTable schemaName="ruleform" tableName="relationship_attribute">
            <column name="id" type="CHAR(22)">
                <constraints primaryKey="true" primaryKeyName="relationship_attribute_pkey" />
            </column>
            <column name="relationship" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column name="attribute" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column name="key" type="VARCHAR(10485760)" />
            <column name="numeric_value" type="numeric" />
            <column name="integer_value" type="INT4" />
            <column name="boolean_value" type="SMALLINT" />
            <column name="text_value" type="VARCHAR(10485760)" />
            <column name="timestamp_value" type="TIMESTAMP WITH TIME ZONE" />
            <column name="binary_value" type="BYTEA" />
            <column name="unit" type="CHAR(22)" />
            <column defaultValueComputed="1" name="sequence_number" type="sequence_number">
                <constraints nullable="false" />
            </column>
            <column name="notes" type="VARCHAR(10485760)" />
            <column name="updated_by" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" type="TIMESTAMPTZ">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="relationship_attribute" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-302">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"  baseColumnNames="attribute" baseTableName="relationship_attribute"
            constraintName="relationship_attribute_attribute_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-308">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"  baseColumnNames="relationship" baseTableName="relationship_attribute"
            constraintName="relationship_attribute_relationship_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="relationship" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-309">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"  baseColumnNames="unit" baseTableName="relationship_attribute"
            constraintName="relationship_attribute_unit_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="unit" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-310">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"  baseColumnNames="updated_by" baseTableName="relationship_attribute"
            constraintName="relationship_attribute_updated_by_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-311">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"  baseColumnNames="inverse" baseTableName="relationship" constraintName="relationship_inverse_fkey"
            deferrable="true" initiallyDeferred="true" onDelete="NO ACTION" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="relationship" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-408">
        <addUniqueConstraint schemaName="ruleform" columnNames="relationship, attribute" constraintName="relationship_attribute_relationship_key"
            deferrable="false" disabled="false" initiallyDeferred="false" tableName="relationship_attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-514">
        <createIndex schemaName="ruleform" indexName="relationship_attribute_updated_by_fkey_idx" tableName="relationship_attribute" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>

    <changeSet id="2" author="hhildebrand">
        <sql> ALTER TABLE relationship_attribute OWNER TO core; </sql>
        <rollback />
    </changeSet>
    <changeSet id="4" author="hhildebrand">
        <sql><![CDATA[
            GRANT ALL ON TABLE relationship_attribute TO core;
            GRANT SELECT ON TABLE relationship_attribute TO core_read_only;
            GRANT SELECT, UPDATE, INSERT, DELETE ON TABLE relationship_attribute TO core_read_write;
            ]]>
        </sql>
        <rollback />
    </changeSet>
</databaseChangeLog>
