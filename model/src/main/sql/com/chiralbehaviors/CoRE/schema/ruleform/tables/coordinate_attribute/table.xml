<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-13">
        <createTable schemaName="ruleform" remarks="Describes the details of a specific coordinate" tableName="coordinate_attribute">
            <column name="id" type="CHAR(22)">
                <constraints primaryKey="true" primaryKeyName="coordinate_attribute_pkey" />
            </column>
            <column name="coordinate" remarks="The specific coordinate this rule pertains to" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column name="attribute" remarks="The attribute of the given coordinate this rule defines" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column name="product_value" remarks="If the Attribute is Product-valued, the value is stored in this column" type="CHAR(22)" />
            <column name="integer_value" remarks="If the Attribute is integer-valued, the value is stored in this column" type="INT4" />
            <column name="numeric_value" remarks="If the Attribute is numerically-valued (i.e. non-integer), the value is stored in this column"
                type="numeric" />
            <column name="boolean_value" remarks="If the Attribute is boolean-valued, the value is stored in this column" type="SMALLINT" />
            <column name="text_value" remarks="If the Attribute is text-valued, the value is stored in this column" type="VARCHAR(10485760)" />
            <column name="timestamp_value" type="TIMESTAMP WITH TIME ZONE" />
            <column name="binary_value" type="BYTEA" />
            <column defaultValueComputed="1" name="sequence_number" type="sequence_number">
                <constraints nullable="false" />
            </column>
            <column name="unit" type="CHAR(22)" />
            <column name="notes" remarks="Usage notes for this rule" type="VARCHAR(10485760)" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date"
                remarks="The time at which this rule was last updated" type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="coordinate_attribute" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-127">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"  baseColumnNames="attribute" baseTableName="coordinate_attribute"
            constraintName="coordinate_attribute_attribute_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-133">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"  baseColumnNames="coordinate" baseTableName="coordinate_attribute"
            constraintName="coordinate_attribute_coordinate_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="coordinate" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-134">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"  baseColumnNames="product_value" baseTableName="coordinate_attribute"
            constraintName="coordinate_attribute_product_value_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="product" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-135">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"  baseColumnNames="updated_by" baseTableName="coordinate_attribute"
            constraintName="coordinate_attribute_updated_by_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-378">
        <addUniqueConstraint schemaName="ruleform" columnNames="coordinate, attribute" constraintName="coordinate_attribute_coordinate_key"
            deferrable="false" disabled="false" initiallyDeferred="false" tableName="coordinate_attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-449">
        <createIndex schemaName="ruleform" indexName="coordinate_attribute_product_value_fkey_idx" tableName="coordinate_attribute" unique="false">
            <column name="product_value" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-450">
        <createIndex schemaName="ruleform" indexName="coordinate_attribute_updated_by_fkey_idx" tableName="coordinate_attribute" unique="false">
            <column name="updated_by"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
