        <createTable schemaName="ruleform"
            remarks="Defines rules stating what attributes (and values thereof) are authorized for particular status_codes" tableName="status_code_attribute_authorization"
        >
            <column name="workspace" type="uuid" />
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="status_code_attribute_authorization_pkey" />
            </column>
            <column name="network_authorization" remarks="The network relationship that authorizes the attributes" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="authorized_attribute" remarks="An Attribute the existential entity is expected to have" type="uuid">
                <constraints nullable="true" />
            </column>
            <column name="authorized_network_attribute" remarks="An Attribute the child network edge is expected to have" type="uuid">
                <constraints nullable="true" />
            </column>
            <column name="boolean_value" type="boolean" />
            <column name="binary_value" type="BYTEA" />
            <column name="text_value" remarks="Contains a single acceptable text-value if 'attribute' has a data type of 'text'"
                type="TEXT" />
            <column name="integer_value" type="INT4" />
            <column name="numeric_value" type="numeric" />
            <column name="timestamp_value" type="TIMESTAMPTZ" />
            <column name="grouping_agency" type="uuid" />
            <column name="notes" remarks="Additional notes regarding this rule" type="TEXT" />
            <column name="updated_by" remarks="The status_code that last updated this rule" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
        </createTable>
        <rollback>
            <dropTable tableName="status_code_attribute_authorization" />
        </rollback>
