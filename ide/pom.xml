        </dependency>
        <dependency>
            <groupId>de.cau.cs.kieler</groupId>
            <artifactId>core.kgraph</artifactId>
            <version>0.7.1.201502261452</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/de.cau.cs.kieler.core.kgraph-0.7.1.201502261452.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>de.cau.cs.kieler</groupId>
            <artifactId>kiml</artifactId>
            <version>0.17.0.201502261452</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/de.cau.cs.kieler.kiml-0.17.0.201502261452.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>de.cau.cs.kieler</groupId>
            <artifactId>kiml.formats</artifactId>
            <version>0.2.3.201502261452</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/de.cau.cs.kieler.kiml.formats-0.2.3.201502261452.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>de.cau.cs.kieler</groupId>
            <artifactId>kiml.graphviz.dot</artifactId>
            <version>0.7.1.201502261452</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/de.cau.cs.kieler.kiml.graphviz.dot-0.7.1.201502261452.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>de.cau.cs.kieler</groupId>
            <artifactId>kiml.graphviz.layouter</artifactId>
            <version>0.6.8.201502261452</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/de.cau.cs.kieler.kiml.graphviz.layouter-0.6.8.201502261452.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>de.cau.cs.kieler</groupId>
            <artifactId>kiml.service</artifactId>
            <version>0.7.2.201502261452</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/lib/de.cau.cs.kieler.kiml.service-0.7.2.201502261452.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>de.fxdiagram</groupId>
            <artifactId>de.fxdiagram.core</artifactId>
        </dependency>
        <dependency>
            <groupId>de.fxdiagram</groupId>
            <artifactId>de.fxdiagram.annotations</artifactId>
        </dependency>
        <dependency>
            <groupId>de.fxdiagram</groupId>
            <artifactId>de.fxdiagram.external</artifactId>
        </dependency>
        <dependency>
            <groupId>de.fxdiagram</groupId>
            <artifactId>de.fxdiagram.lib</artifactId>
        </dependency>
        <dependency>
            <groupId>de.fxdiagram</groupId>
            <artifactId>de.fxdiagram.mapping</artifactId>
        </dependency>
        <dependency>
            <groupId>de.fxdiagram</groupId>
            <artifactId>de.fxdiagram.noeclipse</artifactId>
        </dependency>

        <dependency>
            <groupId>com.google.inject</groupId>
            <artifactId>guice</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.emf</groupId>
            <artifactId>org.eclipse.emf.ecore</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.emf</groupId>
            <artifactId>org.eclipse.emf.common</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.emf</groupId>
            <artifactId>org.eclipse.emf.ecore.xmi</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.xtend</groupId>
            <artifactId>org.eclipse.xtend.lib</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.xtend</groupId>
            <artifactId>org.eclipse.xtend.lib.macro</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.xtext</groupId>
            <artifactId>org.eclipse.xtext</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.xtext</groupId>
            <artifactId>org.eclipse.xtext.util</artifactId>
        </dependency>
        <dependency>
            <groupId>org.eclipse.xtext</groupId>
            <artifactId>org.eclipse.xtext.xbase</artifactId>
        </dependency>
        <dependency>
            <groupId>de.fxdiagram</groupId>
            <artifactId>de.fxdiagram.examples</artifactId>
            <version>${fxdiagram.version}</version>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>webstart</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-shade-plugin</artifactId>
                        <configuration>
                            <shadedClassifierName>phat</shadedClassifierName>
                            <shadedArtifactAttached>true</shadedArtifactAttached>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.5.0</version>
                        <executions>
                            <execution>
                                <id>package-jar</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>${env.JAVA_HOME}/bin/javapackager</executable>
                                    <!-- http://docs.oracle.com/javase/8/docs/technotes/tools/unix/javapackager.html -->
                                    <arguments>
                                        <argument>-deploy</argument>
                                        <argument>-appclass</argument>
                                        <argument>${main.class}</argument>
                                        <argument>-srcfiles</argument>
                                        <argument>${project.build.directory}/${project.artifactId}-${project.version}-phat.jar</argument>
                                        <argument>-outdir</argument>
                                        <argument>./target</argument>
                                        <argument>-outfile</argument>
                                        <argument>${project.artifactId}-phat</argument>
                                        <argument>-v</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>com.github.batkinson.plugins</groupId>
                        <artifactId>maven-pack200-plugin</artifactId>
                        <version>1.0.1</version>
                        <executions>
                            <execution>
                                <id>pack-jars</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>pack</goal>
                                </goals>
                                <configuration>
                                    <failOnUnknownAttributes>false</failOnUnknownAttributes>
                                    <normalizeOnly>false</normalizeOnly>
                                    <processMainArtifact>false</processMainArtifact>
                                    <includeClassifiers>
                                        <includeClassifier>phat</includeClassifier>
                                    </includeClassifiers>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>