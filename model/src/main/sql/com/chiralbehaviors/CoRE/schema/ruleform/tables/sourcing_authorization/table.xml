<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-52">
        <createTable remarks="Defines rules stating what network relationships are authorized for particular agencys" tableName="ruleform.sourcing_authorization">
            <column autoIncrement="true" name="owner" type="BIGSERIAL">
                <constraints nullable="false" />
            </column>
            <column autoIncrement="true" name="product" type="BIGSERIAL">
                <constraints nullable="false" />
            </column>
            <column autoIncrement="true" name="location" type="BIGSERIAL">
                <constraints nullable="false" />
            </column>
            <column name="quantity_on_hand" type="numeric" />
            <column name="quantity_committed" type="numeric" />
            <column name="reorder_threshold" type="numeric" />
            <column autoIncrement="true" name="id" remarks="Unique identifier" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="sourcing_authorization_pkey" />
            </column>
            <column name="notes" remarks="Additional notes regarding this rule" type="VARCHAR(10485760)" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" remarks="The date this rule was last changed"
                type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.sourcing_authorization" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-317">
        <addForeignKeyConstraint baseColumnNames="owner" baseTableName="ruleform.sourcing_authorization"
            constraintName="sourcing_authorization_consumer_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-318">
        <addForeignKeyConstraint baseColumnNames="location" baseTableName="ruleform.sourcing_authorization"
            constraintName="sourcing_authorization_location_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.location" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-319">
        <addForeignKeyConstraint baseColumnNames="product" baseTableName="ruleform.sourcing_authorization"
            constraintName="sourcing_authorization_product_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.product" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-320">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.sourcing_authorization"
            constraintName="sourcing_authorization_updated_by_fkey" deferrable="false" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-411">
        <addUniqueConstraint columnNames="owner, product, location" constraintName="sourcing_athorization_classification_attri_key"
            deferrable="false" disabled="false" initiallyDeferred="false" tableName="ruleform.sourcing_authorization" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-517">
        <createIndex indexName="sourcing_authorization_updated_by_fkey_idx" tableName="ruleform.sourcing_authorization" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
