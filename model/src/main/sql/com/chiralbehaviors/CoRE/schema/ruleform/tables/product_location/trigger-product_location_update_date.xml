<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1"
        author="hhildebrand">
        <sql> CREATE TRIGGER product_location_update_date BEFORE INSERT OR UPDATE ON
            product_location FOR EACH ROW EXECUTE PROCEDURE set_update_date(); </sql>
        <rollback> DROP TRIGGER product_location_update_date ON product_location; </rollback>
    </changeSet>
</databaseChangeLog>
