<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform" tableName="agency_attribute">
            <column name="workspace" type="uuid" />
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="agency_attribute_pkey" />
            </column>
            <column name="agency" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="attribute" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="key" type="TEXT" />
            <column name="numeric_value" type="numeric" />
            <column name="integer_value" type="INT4" />
            <column name="boolean_value" type="boolean" />
            <column name="text_value" type="TEXT" />
            <column name="timestamp_value" type="TIMESTAMP WITH TIME ZONE" />
            <column name="binary_value" type="BYTEA" />
            <column name="unit" type="uuid" />
            <column name="sequence_number" type="INT4" />
            <column name="notes" type="TEXT" />
            <column name="updated_by" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
        </createTable>
        <rollback>
            <dropTable tableName="agency_attribute" />
        </rollback>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="agency" baseTableName="agency_attribute" constraintName="agency_attribute_agency_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="attribute" baseTableName="agency_attribute" constraintName="agency_attribute_attribute_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="agency_attribute" constraintName="agency_attribute_updated_by_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="SET DEFAULT" referencedColumnNames="id" referencedTableName="agency" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="unit" baseTableName="agency_attribute" constraintName="agency_attribute_unit_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="unit" />
        <addUniqueConstraint schemaName="ruleform" columnNames="agency, attribute, sequence_number" constraintName="agency_attribute_agency_key"
            deferrable="false" disabled="false" initiallyDeferred="true" tableName="agency_attribute" />
        <createIndex schemaName="ruleform" indexName="agency_attribute_updated_by_fkey_idx" tableName="agency_attribute" unique="false">
            <column name="updated_by" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="agency_attribute_key_idx" tableName="agency_attribute" unique="false">
            <column name="key" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="agency_attribute_numeric_idx" tableName="agency_attribute" unique="false">
            <column name="numeric_value" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="agency_attribute_timestamp_idx" tableName="agency_attribute" unique="false">
            <column name="timestamp_value" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="agency_attribute_agency_idx" tableName="agency_attribute" unique="false">
            <column name="agency" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="agency_attribute_attribute_idx" tableName="agency_attribute" unique="false">
            <column name="attribute" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="agency_attribute_unit_idx" tableName="agency_attribute" unique="false">
            <column name="unit" />
        </createIndex>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="workspace" baseTableName="agency_attribute" constraintName="agency_attribute_workspace_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="workspace_authorization" />
    </changeSet>
    <changeSet author="hhildebrand" id="add updated">
        <addColumn schemaName="ruleform" tableName="agency_attribute">
            <column name="updated" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
