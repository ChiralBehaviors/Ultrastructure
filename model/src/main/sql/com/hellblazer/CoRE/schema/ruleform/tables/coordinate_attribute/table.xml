<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-13">
        <createTable remarks="Describes the details of a specific coordinate" tableName="ruleform.coordinate_attribute">
            <column autoIncrement="true" name="id" remarks="Otherwise meaningless identifier for a definition rule" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="coordinate_attribute_pkey" />
            </column>
            <column name="coordinate" remarks="The specific coordinate this rule pertains to" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="attribute" remarks="The attribute of the given coordinate this rule defines" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="product_value" remarks="If the Attribute is Product-valued, the value is stored in this column" type="INT8" />
            <column name="integer_value" remarks="If the Attribute is integer-valued, the value is stored in this column" type="INT4" />
            <column name="numeric_value" remarks="If the Attribute is numerically-valued (i.e. non-integer), the value is stored in this column"
                type="numeric" />
            <column name="boolean_value" remarks="If the Attribute is boolean-valued, the value is stored in this column" type="SMALLINT" />
            <column name="text_value" remarks="If the Attribute is text-valued, the value is stored in this column" type="VARCHAR(10485760)" />
            <column name="timestamp_value" type="TIMESTAMP WITH TIME ZONE" />
            <column name="binary_value" type="BYTEA" />
            <column defaultValueComputed="1" name="sequence_number" type="ruleform.sequence_number">
                <constraints nullable="false" />
            </column>
            <column name="unit" type="INT8" />
            <column name="notes" remarks="Usage notes for this rule" type="VARCHAR(10485760)" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date"
                remarks="The time at which this rule was last updated" type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.coordinate_attribute" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-127">
        <addForeignKeyConstraint baseColumnNames="attribute" baseTableName="ruleform.coordinate_attribute"
            constraintName="coordinate_attribute_attribute_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-133">
        <addForeignKeyConstraint baseColumnNames="coordinate" baseTableName="ruleform.coordinate_attribute"
            constraintName="coordinate_attribute_coordinate_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.coordinate" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-134">
        <addForeignKeyConstraint baseColumnNames="product_value" baseTableName="ruleform.coordinate_attribute"
            constraintName="coordinate_attribute_product_value_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.product" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-135">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.coordinate_attribute"
            constraintName="coordinate_attribute_updated_by_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-378">
        <addUniqueConstraint columnNames="coordinate, attribute" constraintName="coordinate_attribute_coordinate_key"
            deferrable="false" disabled="false" initiallyDeferred="false" tableName="ruleform.coordinate_attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-449">
        <createIndex indexName="coordinate_attribute_product_value_fkey_idx" tableName="ruleform.coordinate_attribute" unique="false">
            <column name="product_value" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-450">
        <createIndex indexName="coordinate_attribute_updated_by_fkey_idx" tableName="ruleform.coordinate_attribute" unique="false">
            <column name="updated_by"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
