<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform" tableName="product_attribute">
            <column name="workspace" type="uuid" />
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="product_attribute_pkey" />
            </column>
            <column name="product" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="attribute" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="key" type="TEXT" />
            <column name="numeric_value" type="numeric" />
            <column name="integer_value" type="INT4" />
            <column name="boolean_value" type="boolean" />
            <column name="text_value" type="TEXT" />
            <column name="timestamp_value" type="TIMESTAMP WITH TIME ZONE" />
            <column name="binary_value" type="BYTEA" />
            <column defaultValueComputed="1" name="sequence_number" type="INT4">
                <constraints nullable="false" />
            </column>
            <column name="unit" type="uuid" />
            <column name="notes" type="TEXT" />
            <column name="updated_by" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
        </createTable>
        <rollback>
            <dropTable tableName="product_attribute" />
        </rollback>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="attribute" baseTableName="product_attribute" constraintName="product_attribute_attribute_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="product" baseTableName="product_attribute" constraintName="product_attribute_product_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="product" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="product_attribute" constraintName="product_attribute_updated_by_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="SET DEFAULT" referencedColumnNames="id" referencedTableName="agency" />
        <addUniqueConstraint schemaName="ruleform" columnNames="product, attribute, sequence_number" constraintName="product_attribute_key"
            deferrable="false" disabled="false" initiallyDeferred="true" tableName="product_attribute" />
        <createIndex schemaName="ruleform" indexName="product_attribute_attribute_fkey_idx" tableName="product_attribute"
            unique="false"
        >
            <column name="attribute" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="product_attribute_product_fkey_idx" tableName="product_attribute" unique="false">
            <column name="product" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="product_attribute_unit_fkey_idx" tableName="product_attribute" unique="false">
            <column name="unit" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="product_attribute_updated_by_fkey_idx" tableName="product_attribute"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="product_attribute_key_idx" tableName="product_attribute" unique="false">
            <column name="key" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="product_attribute_numeric_idx" tableName="product_attribute" unique="false">
            <column name="numeric_value" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="product_attribute_timestamp_idx" tableName="product_attribute" unique="false">
            <column name="timestamp_value" />
        </createIndex>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="workspace" baseTableName="product_attribute" constraintName="product_attribute_workspace_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" referencedColumnNames="id" referencedTableName="workspace_authorization" />
    </changeSet>
    <changeSet author="hhildebrand" id="add updated">
        <addColumn schemaName="ruleform" tableName="product_attribute">
            <column name="updated" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
