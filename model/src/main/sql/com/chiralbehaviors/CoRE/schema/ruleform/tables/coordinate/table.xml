<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-12">
        <createTable remarks="Specific location coordinates within the system" tableName="ruleform.coordinate">
            <column autoIncrement="true" name="id" remarks="Otherwise meaningless identifier for a coordinate" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="coordinate_pkey" />
            </column>
            <column name="name" remarks="The unique name of a coordinate" type="VARCHAR(10485760)">
                <constraints nullable="false" />
            </column>
            <column name="description" remarks="Free-form description of the coordinate" type="VARCHAR(10485760)" />
            <column name="notes" remarks="Usage notes for the coordinate" type="VARCHAR(10485760)" />
            <column defaultValueNumeric="0" name="pinned" remarks="Indicates that a coordinate rule has been pinned, restricting changes to the rule"
                type="SMALLINT"
            >
                <constraints nullable="false" />
            </column>
            <column name="updated_by" remarks="The agency that last updated this rule" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date"
                remarks="The time at which this rule was last updated" type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.coordinate" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-144">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.coordinate" constraintName="coordinate_updated_by_fkey"
            deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-455">
        <createIndex indexName="coordinate_updated_by_fkey_idx" tableName="ruleform.coordinate" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
