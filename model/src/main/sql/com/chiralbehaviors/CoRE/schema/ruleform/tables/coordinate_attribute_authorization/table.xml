<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-14">
        <createTable remarks="Defines rules stating what attributes (and values thereof) are authorized for particular coordinates"
            tableName="ruleform.coordinate_attribute_authorization"
        >
            <column autoIncrement="true" name="id" remarks="Unique identifier" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="coordinate_attribute_authorization_pkey" />
            </column>
            <column name="classification"
                remarks="In conjunction with the 'coordinate' column, determines the classification criteria for selecting attributes a certain coordinate must have"
                type="INT8"
            >
                <constraints nullable="false" />
            </column>
            <column name="classifier"
                remarks="In conjunction with the 'classification' column, determines the classification criteria for selecting attributes a certain coordinate must have"
                type="INT8"
            >
                <constraints nullable="false" />
            </column>
            <column name="authorized_attribute" remarks="An Attribute a coordinate is expected to have" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="1" name="sequence_number"
                remarks="Ordering and uniqueness, for when an Attribute can have multiple acceptable values" type="ruleform.sequence_number"
            >
                <constraints nullable="false" />
            </column>
            <column name="text_value" remarks="Contains a single acceptable text-value if 'attribute' has a data type of 'text'"
                type="VARCHAR(10485760)" />
            <column name="integer_value" type="INT4" />
            <column name="numeric_value" type="numeric" />
            <column name="timestamp_value" type="TIMESTAMPTZ" />
            <column name="grouping_agency" type="INT8" />
            <column name="notes" remarks="Additional notes regarding this rule" type="VARCHAR(10485760)" />
            <column name="updated_by" remarks="The coordinate that last updated this rule" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" remarks="The date this rule was last changed"
                type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.coordinate_attribute_authorization" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-128">
        <addForeignKeyConstraint baseColumnNames="authorized_attribute" baseTableName="ruleform.coordinate_attribute_authorization"
            constraintName="coordinate_attribute_authorization_attribute_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-129">
        <addForeignKeyConstraint baseColumnNames="classification" baseTableName="ruleform.coordinate_attribute_authorization"
            constraintName="coordinate_attribute_authorization_classification_attribute_fke" deferrable="true" initiallyDeferred="false"
            onDelete="RESTRICT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.relationship" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-130">
        <addForeignKeyConstraint baseColumnNames="classifier" baseTableName="ruleform.coordinate_attribute_authorization"
            constraintName="coordinate_attribute_authorization_classifier_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.coordinate" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-131">
        <addForeignKeyConstraint baseColumnNames="grouping_agency" baseTableName="ruleform.coordinate_attribute_authorization"
            constraintName="coordinate_attribute_authorization_grouping_coordinate_fkey" deferrable="false" initiallyDeferred="false"
            onDelete="RESTRICT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-132">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.coordinate_attribute_authorization"
            constraintName="coordinate_attribute_authorization_updated_by_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-377">
        <addUniqueConstraint columnNames="classification, classifier, authorized_attribute, sequence_number"
            constraintName="coordinate_attribute_authorizat_classification_attribute_clas_k" deferrable="false" disabled="false"
            initiallyDeferred="false" tableName="ruleform.coordinate_attribute_authorization" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-448">
        <createIndex indexName="coordinate_attribute_authorization_updated_by_fkey_idx" tableName="ruleform.coordinate_attribute_authorization"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
