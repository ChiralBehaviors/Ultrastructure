package org.test.phantasm.demo

Definition: product {
    String name;
    String URI;    
}

DeploymentDefinition extends Definition {
    System getSystem: this.deploymentOf.child
    setSystem(system): this.deploymentOf.system
    Artifact getArtifact: this.derivedFrom.location
}

SystemDefinition extends Definition {
    Deployment getDeployment: this.inDeployment.child
    Function[] getFunctions: this.systemOf.child
    addFunction(function): this.systemOf.function
}