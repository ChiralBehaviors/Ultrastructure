<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-64">
        <createTable schemaName="ruleform" tableName="unit_values">
            <column name="id" type="CHAR(22)">
                <constraints primaryKey="true" primaryKeyName="unit_values_pkey" />
            </column>
            <column name="unit" remarks="The unit whose values are being enumerated" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column name="sequence_number" remarks="The ordering of this value in the set of values for the given unit" type="sequence_number">
                <constraints nullable="false" />
            </column>
            <column name="integer_value" remarks="A permitted integer value for this unit" type="INT4" />
            <column name="numeric_value" remarks="A permitted numeric value for this unit" type="numeric" />
            <column name="text_value" remarks="A permitted text value for this unit" type="CHAR(22)" />
            <column name="boolean_value" remarks="A permitted boolean value for this unit" type="SMALLINT" />
            <column name="notes" remarks="Usage notes for this rule" type="TEXT" />
            <column name="updated_by" defaultValue="AAAAAAAAAAAAAAAAAAAAAQ" remarks="The agency that last updated this rule" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
        </createTable>
        <rollback>
            <dropTable tableName="unit_values" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-367">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="unit" baseTableName="unit_values" constraintName="unit_values_unit_fkey" deferrable="true" initiallyDeferred="true"
            onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="unit" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-368">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="unit_values" constraintName="unit_values_updated_by_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-422">
        <addUniqueConstraint schemaName="ruleform" columnNames="unit, sequence_number" constraintName="unit_values_unit_key"
            deferrable="false" disabled="false" initiallyDeferred="true" tableName="unit_values" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-527">
        <createIndex schemaName="ruleform" indexName="unit_values_unit_fkey_idx" tableName="unit_values" unique="false">
            <column name="unit" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-528">
        <createIndex schemaName="ruleform" indexName="unit_values_updated_by_fkey_idx" tableName="unit_values" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
