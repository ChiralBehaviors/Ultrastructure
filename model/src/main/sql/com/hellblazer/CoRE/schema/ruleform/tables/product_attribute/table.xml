<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-33">
        <createTable tableName="ruleform.product_attribute">
            <column autoIncrement="true" name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="product_attribute_pkey" />
            </column>
            <column name="product" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="attribute" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="numeric_value" type="numeric" />
            <column name="integer_value" type="INT4" />
            <column name="boolean_value" type="SMALLINT" />
            <column name="text_value" type="VARCHAR(10485760)" />
            <column name="timestamp_value" type="TIMESTAMP WITH TIME ZONE" />
            <column name="binary_value" type="BYTEA" />
            <column defaultValueComputed="1" name="sequence_number" type="ruleform.sequence_number">
                <constraints nullable="false" />
            </column>
            <column name="unit" type="INT8" />
            <column name="notes" type="VARCHAR(10485760)" />
            <column name="updated_by" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" type="TIMESTAMPTZ">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.product_attribute" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-212">
        <addForeignKeyConstraint baseColumnNames="attribute" baseTableName="ruleform.product_attribute"
            constraintName="product_attribute_attribute_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-218">
        <addForeignKeyConstraint baseColumnNames="product" baseTableName="ruleform.product_attribute"
            constraintName="product_attribute_product_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.product" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-220">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.product_attribute"
            constraintName="product_attribute_updated_by_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-395">
        <addUniqueConstraint columnNames="product, attribute, sequence_number" constraintName="product_attribute_key"
            deferrable="false" disabled="false" initiallyDeferred="false" tableName="ruleform.product_attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-481">
        <createIndex indexName="product_attribute_attribute_fkey_idx" tableName="ruleform.product_attribute" unique="false">
            <column name="attribute" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-483">
        <createIndex indexName="product_attribute_product_fkey_idx" tableName="ruleform.product_attribute" unique="false">
            <column name="product" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-484">
        <createIndex indexName="product_attribute_unit_fkey_idx" tableName="ruleform.product_attribute" unique="false">
            <column name="unit" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-485">
        <createIndex indexName="product_attribute_updated_by_fkey_idx" tableName="ruleform.product_attribute" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
