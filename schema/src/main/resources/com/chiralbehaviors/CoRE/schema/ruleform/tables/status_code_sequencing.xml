<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

	<changeSet author="hhildebrand" id="2.0.0">
		<createTable schemaName="ruleform"
			tableName="status_code_sequencing">
			<column name="authority" type="uuid" />
			<column name="id" type="uuid">
				<constraints primaryKey="true"
					primaryKeyName="status_code_sequencing_pkey" nullable="false" />
			</column>
			<column name="service" type="uuid">
				<constraints nullable="false" />
			</column>
			<column name="parent" type="uuid">
				<constraints nullable="false" />
			</column>
			<column name="child" type="uuid">
				<constraints nullable="false" />
			</column>
			<column name="notes" type="TEXT" />
			<column name="updated_by"
				defaultValue="'00000000-0000-0000-0000-000000000003'" type="uuid">
				<constraints nullable="false" />
			</column>
			<column name="version" type="INT4" />
		</createTable>

		<addUniqueConstraint schemaName="ruleform"
			columnNames="service, parent, child"
			constraintName="status_code_sequencing_service_parent_sequence_number_key"
			deferrable="true" disabled="false" initiallyDeferred="true"
			tableName="status_code_sequencing" />

		<addForeignKeyConstraint
			baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
			baseColumnNames="authority" baseTableName="status_code_sequencing"
			constraintName="status_code_sequencing_authority_fkey"
			deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
			referencedColumnNames="id" referencedTableName="existential" />
		<addForeignKeyConstraint
			baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
			baseColumnNames="child" baseTableName="status_code_sequencing"
			constraintName="status_code_sequencing_child_fkey" deferrable="true"
			initiallyDeferred="true" onDelete="CASCADE"
			referencedColumnNames="id" referencedTableName="existential" />
		<addForeignKeyConstraint
			baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
			baseColumnNames="parent" baseTableName="status_code_sequencing"
			constraintName="status_code_sequencing_parent_fkey" deferrable="true"
			initiallyDeferred="true" onDelete="CASCADE"
			referencedColumnNames="id" referencedTableName="existential" />
		<addForeignKeyConstraint
			baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
			baseColumnNames="service" baseTableName="status_code_sequencing"
			constraintName="status_code_sequencing_service_fkey"
			deferrable="true" initiallyDeferred="true" onDelete="CASCADE"
			referencedColumnNames="id" referencedTableName="existential" />
		<addForeignKeyConstraint
			baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
			baseColumnNames="updated_by" baseTableName="status_code_sequencing"
			constraintName="status_code_sequencing_updated_by_fkey"
			deferrable="true" initiallyDeferred="true" onDelete="SET DEFAULT"
			referencedColumnNames="id" referencedTableName="existential" />

		<createIndex schemaName="ruleform"
			indexName="status_code_sequencing_parent_fkey_idx"
			tableName="status_code_sequencing" unique="false">
			<column name="parent" />
		</createIndex>
		<createIndex schemaName="ruleform"
			indexName="status_code_sequencing_child_fkey_idx"
			tableName="status_code_sequencing" unique="false">
			<column name="child" />
		</createIndex>
		<createIndex schemaName="ruleform"
			indexName="status_code_sequencing_updated_by_fkey_idx"
			tableName="status_code_sequencing" unique="false">
			<column name="updated_by" />
		</createIndex>
		<createIndex schemaName="ruleform"
			indexName="status_code_sequencing_authority_idx"
			tableName="status_code_sequencing" unique="false">
			<column name="authority" />
		</createIndex>
	</changeSet>
</databaseChangeLog>
