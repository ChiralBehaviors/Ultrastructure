<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-57">
        <createTable remarks="Defines the possible states that an Event can be in, as well as the path through those states"
            tableName="ruleform.status_code_sequencing"
        >
            <column autoIncrement="true" name="id" remarks="Unique identifier" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="status_code_sequencing_pkey" />
            </column>
            <column name="service" remarks="The service whose states are being described" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="parent_code"
                remarks="The &quot;from&quot; state to which one may transition to any state listed in the &quot;child_code&quot; column"
                type="INT8"
            >
                <constraints nullable="false" />
            </column>
            <column name="sequence_number" remarks="Ordering and uniqueness, for when a Event can transition into one of a number of states"
                type="ruleform.sequence_number"
            >
                <constraints nullable="false" />
            </column>
            <column name="child_code"
                remarks="The &quot;to&quot; state to which one may transition from the state listed in the &quot;parent_code&quot; column"
                type="INT8"
            >
                <constraints nullable="false" />
            </column>
            <column name="notes" remarks="Additional notes regarding usage of this particular rule" type="VARCHAR(10485760)" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" remarks="The date this rule was last changed"
                type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.status_code_sequencing" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-334">
        <addForeignKeyConstraint baseColumnNames="child_code" baseTableName="ruleform.status_code_sequencing"
            constraintName="status_code_sequencing_child_code_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.status_code" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-335">
        <addForeignKeyConstraint baseColumnNames="parent_code" baseTableName="ruleform.status_code_sequencing"
            constraintName="status_code_sequencing_parent_code_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.status_code" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-336">
        <addForeignKeyConstraint baseColumnNames="service" baseTableName="ruleform.status_code_sequencing"
            constraintName="status_code_sequencing_service_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.product" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-337">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.status_code_sequencing"
            constraintName="status_code_sequencing_updated_by_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-415">
        <addUniqueConstraint columnNames="service, parent_code, child_code, sequence_number" constraintName="status_code_sequencing_service_parent_code_sequence_number_key"
            deferrable="false" disabled="false" initiallyDeferred="false" tableName="ruleform.status_code_sequencing" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-520">
        <createIndex indexName="status_code_sequencing_updated_by_fkey_idx" tableName="ruleform.status_code_sequencing" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
