<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform" tableName="location_attribute">
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="location_attribute_pkey" />
            </column>
            <column name="location" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="attribute" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="key" type="TEXT" />
            <column name="numeric_value" type="numeric" />
            <column name="integer_value" type="INT4" />
            <column name="boolean_value" type="SMALLINT" />
            <column name="text_value" type="TEXT" />
            <column name="timestamp_value" type="TIMESTAMP WITH TIME ZONE" />
            <column name="binary_value" type="BYTEA" />
            <column defaultValueComputed="1" name="sequence_number" type="sequence_number">
                <constraints nullable="false" />
            </column>
            <column name="unit" type="uuid" />
            <column name="updated_by" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
            <column name="notes" type="TEXT" />
        </createTable>
        <rollback>
            <dropTable tableName="location_attribute" />
        </rollback>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="attribute" baseTableName="location_attribute" constraintName="location_attribute_attribute_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="location" baseTableName="location_attribute" constraintName="location_attribute_location_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="location" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="location_attribute" constraintName="location_attribute_updated_by_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="unit" baseTableName="location_attribute" constraintName="product_attribute_unit_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="unit" />
        <addUniqueConstraint schemaName="ruleform" columnNames="location, attribute, sequence_number" constraintName="location_attribute_location_key"
            deferrable="false" disabled="false" initiallyDeferred="true" tableName="location_attribute" />
        <createIndex schemaName="ruleform" indexName="location_attribute_integer_idx" tableName="location_attribute" unique="false">
            <column name="integer_value" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="location_attribute_updated_by_fkey_idx" tableName="location_attribute"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="location_attribute_key_idx" tableName="location_attribute" unique="false">
            <column name="key" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="location_attribute_numeric_idx" tableName="location_attribute" unique="false">
            <column name="numeric_value" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="location_attribute_timestamp_idx" tableName="location_attribute" unique="false">
            <column name="timestamp_value" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="location_attribute_location_idx" tableName="location_attribute" unique="false">
            <column name="location" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="location_attribute_attribute_idx" tableName="location_attribute" unique="false">
            <column name="attribute" />
        </createIndex>
        <createIndex schemaName="ruleform" indexName="location_attribute_unit_idx" tableName="location_attribute" unique="false">
            <column name="unit" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
