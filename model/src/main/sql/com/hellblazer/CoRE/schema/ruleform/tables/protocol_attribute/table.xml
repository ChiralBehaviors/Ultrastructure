<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-46">
        <createTable remarks="Attributes attached to a specific invocation of an Event" tableName="ruleform.protocol_attribute">
            <column autoIncrement="true" name="id" remarks="Unique identifier" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="protocol_attribute_pkey" />
            </column>
            <column name="protocol" remarks="The protocol whose attributes are being specified" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="location_value" type="INT8" />
            <column name="product_value" type="INT8" />
            <column name="agency_value" type="INT8" />
            <column name="attribute" remarks="The Attribute or facet of the given protocol being declared" type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="sequence_number" remarks="Ordering and uniqueness, for when a protocol can have multiple values for a given Attribute"
                type="ruleform.sequence_number"
            >
                <constraints nullable="false" />
            </column>
            <column name="text_value" remarks="If the Attribute is text-valued, the value goes in this column; all other value columns should be NULL"
                type="VARCHAR(10485760)" />
            <column name="numeric_value" remarks="If the Attribute is numeric-valued, the value goes in this column; all other value columns should be NULL"
                type="numeric" />
            <column name="boolean_value" type="SMALLINT" />
            <column name="integer_value" remarks="If the Attribute is integer-valued, the value goes in this column; all other value columns should be NULL"
                type="INT4" />
            <column name="timestamp_value" type="TIMESTAMP WITH TIME ZONE" />
            <column name="binary_value" type="BYTEA" />
            <column name="unit" remarks="The unit of measure (if any) associated with the given value" type="INT8" />
            <column name="notes" remarks="Additional notes regarding this rule" type="VARCHAR(10485760)" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" remarks="The date this rule was last changed"
                type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.protocol_attribute" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-274">
        <addForeignKeyConstraint baseColumnNames="agency_value" baseTableName="ruleform.protocol_attribute"
            constraintName="protocol_attribute_agency_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-275">
        <addForeignKeyConstraint baseColumnNames="attribute" baseTableName="ruleform.protocol_attribute"
            constraintName="protocol_attribute_attribute_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-289">
        <addForeignKeyConstraint baseColumnNames="location_value" baseTableName="ruleform.protocol_attribute"
            constraintName="protocol_attribute_location_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.location" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-290">
        <addForeignKeyConstraint baseColumnNames="product_value" baseTableName="ruleform.protocol_attribute"
            constraintName="protocol_attribute_product_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.product" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-291">
        <addForeignKeyConstraint baseColumnNames="protocol" baseTableName="ruleform.protocol_attribute"
            constraintName="protocol_attribute_protocol_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.protocol" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-292">
        <addForeignKeyConstraint baseColumnNames="unit" baseTableName="ruleform.protocol_attribute" constraintName="protocol_attribute_units_fkey"
            deferrable="true" initiallyDeferred="false" onDelete="RESTRICT" onUpdate="CASCADE" referencedColumnNames="id"
            referencedTableName="ruleform.unit" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-293">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.protocol_attribute"
            constraintName="protocol_attribute_updated_by_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-406">
        <addUniqueConstraint columnNames="protocol, attribute, sequence_number" constraintName="protocol_attribute_sequence_number_key"
            deferrable="false" disabled="false" initiallyDeferred="false" tableName="ruleform.protocol_attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-511">
        <createIndex indexName="protocol_attribute_updated_by_fkey_idx" tableName="ruleform.protocol_attribute" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
