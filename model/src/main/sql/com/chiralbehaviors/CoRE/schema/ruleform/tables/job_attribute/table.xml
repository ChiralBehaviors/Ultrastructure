<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-22">
        <createTable schemaName="ruleform" remarks="Attributes attached to a specific invocation of an Event" tableName="job_attribute">
            <column name="id" type="CHAR(22)">
                <constraints primaryKey="true" primaryKeyName="job_attribute_pkey" />
            </column>
            <column name="job" remarks="The Job whose attributes are being specified" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column name="attribute" remarks="The Attribute or facet of the given Job being declared" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column name="sequence_number" remarks="Ordering and uniqueness, for when a Job can have multiple values for a given Attribute"
                type="sequence_number"
            >
                <constraints nullable="false" />
            </column>
            <column name="key" type="VARCHAR(10485760)" />
            <column name="text_value" remarks="If the Attribute is text-valued, the value goes in this column; all other value columns should be NULL"
                type="VARCHAR(10485760)" />
            <column name="numeric_value" remarks="If the Attribute is numeric-valued, the value goes in this column; all other value columns should be NULL"
                type="numeric" />
            <column name="boolean_value" type="SMALLINT" />
            <column name="integer_value" remarks="If the Attribute is integer-valued, the value goes in this column; all other value columns should be NULL"
                type="INT4" />
            <column name="timestamp_value" type="TIMESTAMP WITH TIME ZONE" />
            <column name="binary_value" type="BYTEA" />
            <column name="unit" remarks="The unit of measure (if any) associated with the given value" type="CHAR(22)" />
            <column name="notes" remarks="Additional notes regarding this rule" type="VARCHAR(10485760)" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="CHAR(22)">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" remarks="The date this rule was last changed"
                type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="job_attribute" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-160">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="attribute" baseTableName="job_attribute" constraintName="job_attribute_attribute_fkey" deferrable="true"
            initiallyDeferred="false" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-161">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="job" baseTableName="job_attribute" constraintName="job_attribute_job_fkey" deferrable="true" initiallyDeferred="false"
            onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="job" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-162">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="unit" baseTableName="job_attribute" constraintName="job_attribute_units_fkey" deferrable="true"
            initiallyDeferred="false" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="unit" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-163">
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="updated_by" baseTableName="job_attribute" constraintName="job_attribute_updated_by_fkey" deferrable="true"
            initiallyDeferred="false" onDelete="SET DEFAULT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-384">
        <addUniqueConstraint schemaName="ruleform" columnNames="job, attribute, sequence_number" constraintName="job_attribute_sequence_number_key"
            deferrable="false" disabled="false" initiallyDeferred="false" tableName="job_attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-464">
        <createIndex schemaName="ruleform" indexName="job_attribute_updated_by_fkey_idx" tableName="job_attribute" unique="false">
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
