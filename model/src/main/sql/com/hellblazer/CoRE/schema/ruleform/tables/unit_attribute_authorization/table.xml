<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-62">
        <createTable remarks="Defines rules stating what attributes (and values thereof) are authorized for particular units"
            tableName="ruleform.unit_attribute_authorization"
        >
            <column autoIncrement="true" name="id" remarks="Unique identifier" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="unit_attribute_authorization_pkey" />
            </column>
            <column name="classification"
                remarks="In conjunction with the 'unit' column, determines the classification criteria for selecting attributes a certain unit must have"
                type="INT8"
            >
                <constraints nullable="false" />
            </column>
            <column name="classifier"
                remarks="In conjunction with the 'classification' column, determines the classification criteria for selecting attributes a certain unit must have"
                type="INT8"
            >
                <constraints nullable="false" />
            </column>
            <column name="authorized_attribute" remarks="An Attribute a unit is expected to have" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="1" name="sequence_number"
                remarks="Ordering and uniqueness, for when an Attribute can have multiple acceptable values" type="ruleform.sequence_number"
            >
                <constraints nullable="false" />
            </column>
            <column name="text_value" remarks="Contains a single acceptable text-value if 'attribute' has a data type of 'text'"
                type="VARCHAR(10485760)" />
            <column name="integer_value" type="INT4" />
            <column name="numeric_value" type="numeric" />
            <column name="timestamp_value" type="TIMESTAMPTZ" />
            <column name="grouping_agency" type="INT8" />
            <column name="notes" remarks="Additional notes regarding this rule" type="VARCHAR(10485760)" />
            <column name="updated_by" remarks="The unit that last updated this rule" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date" remarks="The date this rule was last changed"
                type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.unit_attribute_authorization" />
        </rollback>
    </changeSet>
    <changeSet id="20" author="hhildebrand">
        <sql> ALTER TABLE ruleform.unit_attribute_authorization OWNER TO core; </sql>
        <rollback />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-353">
        <addForeignKeyConstraint baseColumnNames="authorized_attribute" baseTableName="ruleform.unit_attribute_authorization"
            constraintName="unit_attribute_authorization_attribute_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.attribute" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-354">
        <addForeignKeyConstraint baseColumnNames="classification" baseTableName="ruleform.unit_attribute_authorization"
            constraintName="unit_attribute_authorization_classification_attribute_fkey" deferrable="true" initiallyDeferred="false"
            onDelete="RESTRICT" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.relationship" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-355">
        <addForeignKeyConstraint baseColumnNames="classifier" baseTableName="ruleform.unit_attribute_authorization"
            constraintName="unit_attribute_authorization_classifier_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.unit" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-356">
        <addForeignKeyConstraint baseColumnNames="grouping_agency" baseTableName="ruleform.unit_attribute_authorization"
            constraintName="unit_attribute_authorization_grouping_unit_fkey" deferrable="false" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-357">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.unit_attribute_authorization"
            constraintName="unit_attribute_authorization_updated_by_fkey" deferrable="true" initiallyDeferred="false" onDelete="RESTRICT"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-418">
        <addUniqueConstraint columnNames="classification, classifier, authorized_attribute, sequence_number"
            constraintName="unit_attribute_authorizat_classification_attribute_clas_key" deferrable="false" disabled="false"
            initiallyDeferred="false" tableName="ruleform.unit_attribute_authorization" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-524">
        <createIndex indexName="unit_attribute_authorization_updated_by_fkey_idx" tableName="ruleform.unit_attribute_authorization"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
    </changeSet>

    <changeSet id="30" author="hhildebrand">
        <sql><![CDATA[
            GRANT ALL ON TABLE ruleform.unit_attribute_authorization TO core;
            GRANT SELECT ON TABLE ruleform.unit_attribute_authorization TO core_read_only;
            GRANT SELECT, UPDATE, INSERT, DELETE ON TABLE ruleform.unit_attribute_authorization TO core_read_write;
            ]]>
        </sql>
        <rollback />
    </changeSet>
</databaseChangeLog>
