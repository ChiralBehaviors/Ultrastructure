<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
>

    <changeSet author="hhildebrand" id="2.0.0">
        <createTable schemaName="ruleform" tableName="agency_grouping">
            <column name="id" type="uuid">
                <constraints primaryKey="true" primaryKeyName="agency_grouping_pkey" />
            </column>
            <column name="name" type="TEXT" />
            <column name="grouping_agency" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="agency_entity" type="uuid"/>
            <column name="attribute_entity" type="uuid"/>
            <column name="location_entity" type="uuid"/>
            <column name="interval_entity" type="uuid"/>
            <column name="relationship_entity" type="uuid"/>
            <column name="product_entity" type="uuid"/>
            <column name="status_code_entity" type="uuid"/>
            <column name="unit_entity" type="uuid"/>
            <column name="updated_by" type="uuid">
                <constraints nullable="false" />
            </column>
            <column name="version" type="INT4" />
            <column name="notes" type="TEXT" />
        </createTable>
        <rollback>
            <dropTable tableName="agency_grouping" />
        </rollback>
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="grouping_agency" baseTableName="agency_grouping" constraintName="agency_grouping_grouping_agency_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
            
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="agency_entity" baseTableName="agency_grouping" constraintName="agency_grouping_agency_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="agency" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="attribute_entity" baseTableName="agency_grouping" constraintName="agency_grouping_attribute_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="attribute" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="interval_entity" baseTableName="agency_grouping" constraintName="agency_grouping_interval_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="interval" />
        <addForeignKeyConstraint baseTableSchemaName="ruleform " referencedTableSchemaName="ruleform"
            baseColumnNames="location_entity" baseTableName="agency_grouping" constraintName="agency_grouping_location_fkey" deferrable="true"
            initiallyDeferred="true" onDelete="CASCADE" onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="location" />
