<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
>

    <changeSet author="hhildebrand" id="1390879803225-39">
        <createTable remarks="Specifies locational relationships that exist between Entities" tableName="ruleform.product_location_network">
            <column autoIncrement="true" name="id" remarks="Otherwise meaningless identifier for a rule" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="product_location_network_pkey" />
            </column>
            <column name="product" remarks="The specific Product being located." type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="contextual_product"
                remarks="The Product that is being used as a frame of reference; the one from the 'product' column is located relative to this Product in some way."
                type="INT8"
            >
                <constraints nullable="false" />
            </column>
            <column name="coordinate" remarks="The address of 'product' relative to 'contextual_product'." type="INT8">
                <constraints nullable="false" />
            </column>
            <column name="notes" remarks="Usage notes for this rule" type="VARCHAR(10485760)" />
            <column name="updated_by" remarks="The agency that last updated this rule" type="INT8">
                <constraints nullable="false" />
            </column>
            <column defaultValueComputed="('now'::text)::timestamp(6) with time zone" name="update_date"
                remarks="The time at which this rule was last updated" type="TIMESTAMPTZ"
            >
                <constraints nullable="false" />
            </column>
            <column name="agency" type="INT8">
                <constraints nullable="false" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="ruleform.product_location_network" />
        </rollback>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-238">
        <addForeignKeyConstraint baseColumnNames="agency" baseTableName="ruleform.product_location_network"
            constraintName="product_location_network_agency_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="CASCADE"
            referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-239">
        <addForeignKeyConstraint baseColumnNames="contextual_product" baseTableName="ruleform.product_location_network"
            constraintName="product_location_network_contextual_product_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.product" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-240">
        <addForeignKeyConstraint baseColumnNames="coordinate" baseTableName="ruleform.product_location_network"
            constraintName="product_location_network_coordinate_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.coordinate" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-241">
        <addForeignKeyConstraint baseColumnNames="product" baseTableName="ruleform.product_location_network"
            constraintName="product_location_network_product_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.product" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-242">
        <addForeignKeyConstraint baseColumnNames="updated_by" baseTableName="ruleform.product_location_network"
            constraintName="product_location_network_updated_by_fkey" deferrable="true" initiallyDeferred="false" onDelete="NO ACTION"
            onUpdate="CASCADE" referencedColumnNames="id" referencedTableName="ruleform.agency" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-400">
        <addUniqueConstraint columnNames="agency, product, contextual_product, coordinate" constraintName="product_location_network_product_key"
            deferrable="false" disabled="false" initiallyDeferred="false" tableName="ruleform.product_location_network" />
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-490">
        <createIndex indexName="product_location_network_contextual_product_fkey_idx" tableName="ruleform.product_location_network"
            unique="false"
        >
            <column name="contextual_product" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-491">
        <createIndex indexName="product_location_network_coordinate_fkey_idx" tableName="ruleform.product_location_network"
            unique="false"
        >
            <column name="coordinate" />
        </createIndex>
    </changeSet>
    <changeSet author="hhildebrand" id="1390879803225-492">
        <createIndex indexName="product_location_network_updated_by_fkey_idx" tableName="ruleform.product_location_network"
            unique="false"
        >
            <column name="updated_by" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
